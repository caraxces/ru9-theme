      const nextButton = imageGrid.querySelector('.custom-nav-next');
      
      if (prevButton && nextButton) {
        setTimeout(function() {
          const flkty = Flickity.data(flickityElement);
          if (flkty) {
            prevButton.addEventListener('click', function(event) {
              event.stopPropagation();
              flkty.previous();
            });
            nextButton.addEventListener('click', function(event) {
              event.stopPropagation();
              flkty.next();
            });
          }
        }, 500);
      }
      
      // Sync thumbnail scroller with main slideshow on mobile
      if (window.matchMedia('(max-width: 768px)').matches) {
        setTimeout(function() {
          const flkty = Flickity.data(flickityElement);
          const thumbScroller = productSection.querySelector('.product__thumbs--scroller');
          const thumbItems = productSection.querySelectorAll('.product__thumb-item');
          
          if (flkty && thumbScroller && thumbItems.length > 0) {
            // Function to scroll thumbnail into view and highlight it
            function syncThumbnail(index) {
              thumbItems.forEach(function(item, idx) {
                if (idx === index) {
                  item.classList.add('is-active');
                  
                  // Calculate scroll position to center the active thumbnail
                  const thumbRect = item.getBoundingClientRect();
                  const scrollerRect = thumbScroller.getBoundingClientRect();
                  const thumbCenter = item.offsetLeft + (item.offsetWidth / 2);
                  const scrollerCenter = thumbScroller.offsetWidth / 2;
                  const scrollPosition = thumbCenter - scrollerCenter;
                  
                  // Smooth scroll to position
                  thumbScroller.scrollTo({
                    left: scrollPosition,
                    behavior: 'smooth'
                  });
                } else {
                  item.classList.remove('is-active');
                }
              });
            }
            
            // Listen to slideshow change events
            flkty.on('change', function(index) {
              syncThumbnail(index);
            });
            
            // Set initial active state
            syncThumbnail(flkty.selectedIndex);
            
            // Also handle thumbnail clicks to navigate slideshow
            thumbItems.forEach(function(thumbItem, index) {
              thumbItem.addEventListener('click', function(e) {
                e.preventDefault();
                flkty.select(index);
              });
            });
          }
        }, 600);
      }
    }
  });
});
</script>

<script>
// Mobile thumbnail click handler
document.addEventListener('DOMContentLoaded', function() {
  initMobileThumbClick('{{ section_id }}');
  
  // Split Comfort top text before and after dash (remove dash)
  function splitComfortTopText() {
    const comfortLabels = document.querySelectorAll('.variant-input-wrap[data-index="option2"] .variant__button-label');
    comfortLabels.forEach(label => {
      const text = label.textContent.trim();
      if (text.includes(' - ')) {
        const [beforeDash, afterDash] = text.split(' - ');
        // Capitalize first letter only
        const capitalizedBeforeDash = beforeDash.charAt(0).toUpperCase() + beforeDash.slice(1).toLowerCase();
        label.innerHTML = `<span style="font-weight: 500; color: #212121;">${capitalizedBeforeDash}</span> <span style="font-weight: 400; color: #212121;">${afterDash}</span>`;
      }
    });
  }
  
  // Run on page load
  splitComfortTopText();
  
  // Run when variants change
  document.addEventListener('variant:change', splitComfortTopText);
});

function initMobileThumbClick(sectionId) {
  setTimeout(function() {
    const productWrapper = document.querySelector(`#ProductSection-${sectionId}`);
    if (!productWrapper) return;

    const thumbItems = productWrapper.querySelectorAll('.product__thumb-item');
    
    thumbItems.forEach(function(thumbItem) {
      thumbItem.addEventListener('click', function() {
        // Remove active class from all thumb items
        thumbItems.forEach(function(item) {
          item.classList.remove('is-active');
        });
        
        // Add active class to clicked item
        this.classList.add('is-active');
        
        // Remove active class after 300ms (duration of transition)
        setTimeout(function() {
          thumbItem.classList.remove('is-active');
        }, 300);
      });
    });
  }, 500);
}

</script>

