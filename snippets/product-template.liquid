                          assign is_half_star = false
                          if i == next_star and has_half_star
                            assign is_half_star = true
                          endif
                        -%}
                        {%- if i <= rating_floor -%}
                          <span class="star star--filled">★</span>
                        {%- elsif is_half_star -%}
                          <span class="star star--half">★</span>
                        {%- else -%}
                          <span class="star star--empty">☆</span>
