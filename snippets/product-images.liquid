function initMobileThumbZoom(sectionId) {
  // Use a timeout to ensure theme scripts have initialized Flickity and Photoswipe
  setTimeout(function() {
    const productWrapper = document.querySelector(`#ProductSection-${sectionId}`);
    if (!productWrapper) return;

    const thumbSliderEl = productWrapper.querySelector('[data-product-thumbs-slider]');
    const productImagesContainer = productWrapper.querySelector('[data-product-images]');

    if (!thumbSliderEl || !productImagesContainer || !window.Flickity) {
      return;
    }

    // Flickity may not be initialized if there's only 1 image, so check for instance
    const flickityInstance = Flickity.data(thumbSliderEl);

    // Photoswipe instance is attached to the container element by the theme script
    const photoswipeInstance = productImagesContainer.photoswipe;

    if (flickityInstance && photoswipeInstance && !flickityInstance.isMobileZoomAttached) {
      flickityInstance.on('staticClick', function(event, pointer, cellElement, cellIndex) {
        if (typeof cellIndex !== 'number') return;

        // Create a mock event to pass to the photoswipe open method
        const fakeEvent = {
          preventDefault: function() {},
          currentTarget: cellElement
        };

        // Call the open method with the correct context and mock event
        photoswipeInstance.open.call(photoswipeInstance, fakeEvent);
      });
      // Add a flag to prevent attaching the event multiple times
      flickityInstance.isMobileZoomAttached = true;
    }
  }, 500);
}
