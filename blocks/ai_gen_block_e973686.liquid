{% doc %}
  @prompt
    Large bold text filled with an image. Include a setting to control the background color.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    background-image: url('{{ block.settings.fill_image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: {{ block.settings.image_position }};
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    color: {{ block.settings.placeholder_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-heading-{{ ai_gen_id }},
    .ai-image-text-placeholder-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.6);
    }

    .ai-image-text-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.6 }}px {{ block.settings.padding_horizontal | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-image-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  style="width: {{ block.settings.desktop_width_percent }}%;"
>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    {% if block.settings.fill_image %}
      <h2 class="ai-image-text-heading-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h2>
    {% else %}
      <h2 class="ai-image-text-placeholder-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h2>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Image filled text",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Premium Sleep"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Text size",
      "default": 100
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Fill image"
    },
    {
      "type": "image_picker",
      "id": "fill_image",
      "label": "Fill image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder text color",
      "default": "#1c2c58"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Vertical padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Image filled text"
    }
  ]
}
{% endschema %}
