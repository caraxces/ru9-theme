# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Liquid files - disable formatting
[*.liquid]
indent_style = space
indent_size = 2
# Don't format CSS/JS inside Liquid files
# Let the developer control formatting manually

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

