{%- render 'section_css' -%}

<style>
  .about-achievements-section {
    padding: 0;
    background-color: #ffffff;
  }
  .about-achievements-body {
    display: grid;
    grid-template-columns: 40% 60%;
    gap: 40px;
    margin-bottom: 100px;
  }
  .about-achievements-body-left {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .about-achievements-body-title {
    font-size: 28px;
    font-weight: 700;
    color: #1A2B4D;
    line-height: 1.3;
    margin: 0;
  }
  .about-achievements-body-text {
    font-size: 16px;
    color: #333333;
    line-height: 1.6;
    margin: 0;
  }
  .about-achievements-body-right {
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }
  .about-achievements-body-right img {
    width: 100%;
    max-width: 472px;
    height: 370px;
    object-fit: cover;
    border-radius: 8px;
  }
  .about-achievements-quote-container {
    position: relative;
    text-align: center;
    background: #F0F7FF;
    border-radius: 5px;
    flex-shrink: 0;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
  }
  .about-achievements-quote {
    color: #1C2C58;
    text-align: center;
    font-family: "Be Vietnam Pro";
    font-size: 39px;
    font-style: italic;
    font-weight: 700;
    line-height: 50px;
    position: relative;
    z-index: 2;
    max-width: 1594;
    width: 1200px;
    display: flex;
    height: 68px;
    flex-direction: column;
    justify-content: center;
    flex-shrink: 0;
  }
  .about-achievements-quote-mark {
    position: absolute;
    z-index: 1;
  }
  .about-achievements-quote-mark img {
    width: auto;
    height: auto;
    max-width: 50px;
    max-height: 50px;
    object-fit: contain;
  }
  .about-achievements-quote-mark.open {
    top: -15px;
    left: 40px;
  }
  .about-achievements-quote-mark.close {
    bottom: -15px;
    right: 40px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-achievements-section .page-width {
      padding: 0 15px;
    }
    .about-achievements-body {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 40px;
    }
    .about-achievements-body-right img {
      width: 100%;
      height: auto;
      max-width: 100%;
    }
    .about-achievements-quote {
      font-size: 16px;
      height: auto;
      width: 100%;
    }
  }
</style>

<div class="about-achievements-section">
  <div class="page-width">
    <div class="about-achievements-body">
      <div class="about-achievements-body-left">
        <h2 class="about-achievements-body-title">Lan tỏa câu chuyện truyền cảm hứng</h2>
        <p class="about-achievements-body-text">Hơn cả những sản phẩm, Ru9 mong muốn chia sẻ câu chuyện về hành trình phát triển để lan tỏa động lực đến những người trẻ. Câu chuyện khởi nghiệp của chị Trang Đặng đã được khám phá trong những buổi phỏng vấn trên truyền hình và các nền tảng podcast uy tín.</p>
        <p class="about-achievements-body-text">Đặc biệt, chị Trang Đặng đã là khách mời trong tập đầu tiên của Vietnam Innovators (phiên bản tiếng Việt) do Vietcetera thực hiện, nơi chị đã chia sẻ những câu chuyện thành công, những bài học từ thất bại và tinh thần đổi mới đã giúp Ru9 vượt qua mọi thách thức.</p>
      </div>
      <div class="about-achievements-body-right">
        {% if section.settings.body_image != blank %}
          <img 
            src="{{ section.settings.body_image | image_url: width: 472, height: 370 }}" 
            alt="{{ section.settings.body_image.alt | escape }}"
            width="472"
            height="370"
            loading="lazy"
          >
        {% endif %}
      </div>
    </div>
    
    <div class="about-achievements-quote-container">
      {% if section.settings.quote_mark_open != blank %}
        <div class="about-achievements-quote-mark open">
          <img 
            src="{{ section.settings.quote_mark_open | image_url: width: 240 }}" 
            alt="Quote mark open"
            width="50"
            height="50"
            loading="lazy"
          >
        </div>
      {% endif %}
      <div class="about-achievements-quote">{{ section.settings.quote | default: '<p>Những thành tựu này là động lực mạnh mẽ để Ru9 tiếp tục kiên định với sứ mệnh mang giấc ngủ chất lượng đến mọi nhà, kiến tạo một tương lai tốt đẹp hơn cho thế hệ mai sau.</p>' }}</div>
      {% if section.settings.quote_mark_close != blank %}
        <div class="about-achievements-quote-mark close">
          <img 
            src="{{ section.settings.quote_mark_close | image_url: width: 240 }}" 
            alt="Quote mark close"
            width="50"
            height="50"
            loading="lazy"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Achievements",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "quote_mark_open",
      "label": "Quote Mark (Open)"
    },
    {
      "type": "image_picker",
      "id": "quote_mark_close",
      "label": "Quote Mark (Close)"
    },
    {
      "type": "html",
      "id": "quote",
      "label": "Achievements Quote",
      "default": "<p>Những thành tựu này là động lực mạnh mẽ để Ru9 tiếp tục kiên định với sứ mệnh mang giấc ngủ chất lượng đến mọi nhà, kiến tạo một tương lai tốt đẹp hơn cho thế hệ mai sau.</p>"
    },
    {
      "type": "image_picker",
      "id": "body_image",
      "label": "Body Image"
    }
  ],
  "presets": [
    {
      "name": "About Achievements"
    }
  ]
}
{% endschema %}
