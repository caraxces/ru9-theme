{%- render 'section_css' -%}

<style>
  .about-customers-section {
    padding: 60px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-customers-section .page-width {
    padding: 0 60px;
  }
  .about-customers-header {
    text-align: left;
    margin-bottom: 50px;
  }
  .about-customers-title {
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 20px;
    line-height: 1.2;
  }
  .about-customers-description {
    font-size: 18px;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    max-width: 800px;
    margin: 0;
    line-height: 1.6;
  }
  .about-customers-separator {
    width: 100px;
    height: 2px;
    background-color: #000000;
    margin: 30px 0;
  }
  .about-customers-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }
  .about-customers-card {
    text-align: left;
    background-color: {{ section.settings.card_background_color | default: '#ffffff' }};
    padding: 30px;
    border-radius: 12px;
    border: 1px solid #E5E7EB;
  }
  .about-customers-image {
    margin-bottom: 20px;
    text-align: center;
  }
  .about-customers-image img {
    width: 422px;
    height: 340px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid #E5E7EB;
  }
  .about-customers-card h3 {
    font-size: 18px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 16px;
    line-height: 1.3;
  }
  .about-customers-card p {
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
    margin: 0;
    font-size: 16px;
  }

  /* Mobile responsive */
  @media (max-width: 1024px) {
    .about-customers-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .about-customers-section {
      padding: 40px 0;
    }
    .about-customers-section .page-width {
      padding: 0 15px;
    }
    .about-customers-title {
      font-size: 24px;
    }
    .about-customers-description {
      font-size: 16px;
    }
    .about-customers-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .about-customers-card {
      padding: 20px;
    }
    .about-customers-image img {
      width: 100%;
      max-width: 300px;
      height: 240px;
    }
    .about-customers-card h3 {
      font-size: 16px;
    }
    .about-customers-card p {
      font-size: 14px;
    }
  }
</style>

<div class="about-customers-section">
  <div class="page-width">
    <div class="about-customers-header">
      <div class="about-customers-title">{{ section.settings.title | default: '<h2>Sự ủng hộ từ các Chuyên Gia, KOL và Influencer có ảnh hưởng</h2>' }}</div>
      <div class="about-customers-separator"></div>
      <div class="about-customers-description">{{ section.settings.description | default: '<p>Chất lượng của Ru9 không chỉ được chứng minh qua trải nghiệm người dùng mà còn được kiểm chứng bởi các chuyên gia hàng đầu.</p>' }}</div>
    </div>
    
    <div class="about-customers-grid">
      {% for block in section.blocks %}
        <div class="about-customers-card">
          <div class="about-customers-image">
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 422, height: 340 }}" 
                alt="{{ block.settings.image.alt | escape }}"
                width="422"
                height="340"
                loading="lazy"
              >
            {% else %}
              <img src="https://via.placeholder.com/422x340/3D6DFF/FFFFFF?text=Expert+{{ forloop.index }}" alt="Expert {{ forloop.index }}" width="422" height="340" />
            {% endif %}
          </div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

