{%- render 'section_css' -%}

<style>
  .about-values-2-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  /* Let theme handle canvas layout */
  .about-values-2-quote-container {
    position: relative;
    text-align: center;
    margin-bottom: 5rem;
    background: #F0F7FF;
    border-radius: 5px;
    flex-shrink: 0;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
  }
  /* ===== MOBILE FIRST ===== */
  .about-values-2-quote {
    color: #1C2C58;
    text-align: center;
    font-family: "Be Vietnam Pro";
    font-size: 16px;
    font-style: italic;
    font-weight: 700;
    line-height: 150%;
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex-shrink: 0;
    padding: 20px;
  }

  /* ===== DESKTOP (768px+) ===== */
  @media (min-width: 768px) {
    .about-values-2-quote {
      font-size: 39px;
      line-height: 50px;
      max-width: 1594px;
      width: 1200px;
      height: 68px;
      padding: 0;
    }
  }
  .about-values-2-quote-mark {
    position: absolute;
    z-index: 1;
  }
  .about-values-2-quote-mark img {
    width: auto;
    height: auto;
    max-width: 50px;
    max-height: 50px;
    object-fit: contain;
  }
  .about-values-2-quote-mark.open {
    top: -15px;
    left: 40px;
  }
  .about-values-2-quote-mark.close {
    bottom: -15px;
    right: 40px;
  }
  .about-values-2-separator {
    display: none;
  }
  .about-values-2-separator-dots {
    display: none;
  }
  .about-values-2-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    position: relative;
    padding-top: 50px;
  }
  .about-values-2-grid::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 0;
    right: 0;
    height: 1px;
    background: #E5E7EB;
    z-index: 0;
  }
  .about-values-2-card {
    text-align: left;
    position: relative;
  }
  .about-values-2-card-content {
    width: 100%;
  }
  .about-values-2-card-dot {
    position: absolute;
    width: 20px;
    height: 20px;
    top: -30px;
    left: 0;
    z-index: 1;
    background: #ffffff;
    padding: 0;
    box-sizing: border-box;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .about-values-2-card-dot svg {
    width: 20px;
    height: 20px;
  }
  .about-values-2-card h3 {
    font-size: 20px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 16px;
    line-height: 1.2;
  }
  .about-values-2-card p {
    color: {{ section.settings.text_color | default: '#333333' }};
    line-height: 1.6;
    margin: 0;
    font-size: 16px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-values-2-section {
      padding: 0;
    }
    .about-values-2-section .page-width {
      padding: 0 15px;
    }
    .about-values-2-quote {
      font-size: 16px;
      margin-bottom: 30px;
    }
    .about-values-2-grid {
      grid-template-columns: 1fr;
      gap: 0;
      padding-top: 0;
    }
    .about-values-2-grid::before {
      display: none;
    }
    .about-values-2-card {
      padding: 20px;
      display: flex;
      align-items: flex-start;
      gap: 15px;
      border-left: 1px solid #E5E7EB;
      padding-left: 35px;
      margin-bottom: 20px;
    }
    .about-values-2-card:first-child {
      margin-top: 0;
    }
    .about-values-2-card:last-child {
      margin-bottom: 0;
    }
    .about-values-2-card-dot {
      position: absolute;
      top: 20px;
      left: -10px;
      z-index: 1;
      background: #ffffff;
      padding: 5px;
      box-sizing: border-box;
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      margin-top: 2px;
    }
    .about-values-2-card h3 {
      font-size: 18px;
    }
  }
</style>

<div class="about-values-2-section">
  <div class="page-width">
    <div class="about-values-2-quote-container">
      {% if section.settings.quote_mark_open != blank %}
        <div class="about-values-2-quote-mark open">
          <img 
            src="{{ section.settings.quote_mark_open | image_url: width: 240 }}" 
            alt="Quote mark open"
            width="50"
            height="50"
            loading="lazy"
          >
        </div>
      {% endif %}
      <div class="about-values-2-quote">{{ section.settings.quote | default: '<p>Mỗi giá trị cốt lõi đều là nền tảng để Ru9 kiên định theo đuổi hành trình cải thiện chất lượng sống qua giấc ngủ</p>' }}</div>
      {% if section.settings.quote_mark_close != blank %}
        <div class="about-values-2-quote-mark close">
          <img 
            src="{{ section.settings.quote_mark_close | image_url: width: 240 }}" 
            alt="Quote mark close"
            width="50"
            height="50"
            loading="lazy"
          >
        </div>
      {% endif %}
    </div>
    
    <div class="about-values-2-separator">
      <svg xmlns="http://www.w3.org/2000/svg" width="1596" height="4" viewBox="0 0 1596 4" fill="none">
        <path d="M0 2L1596 2" stroke="#E5E7EB" stroke-width="3"/>
      </svg>
      <div class="about-values-2-separator-dots">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <circle cx="10" cy="10" r="10" fill="#D9D9D9"/>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <circle cx="10" cy="10" r="10" fill="#D9D9D9"/>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <circle cx="10" cy="10" r="10" fill="#D9D9D9"/>
        </svg>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" width="1596" height="4" viewBox="0 0 1596 4" fill="none">
        <path d="M0 2L1596 2" stroke="#E5E7EB" stroke-width="3"/>
      </svg>
    </div>
    
    <div class="about-values-2-grid">
      {% for block in section.blocks %}
        <div class="about-values-2-card">
          <div class="about-values-2-card-dot">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <circle cx="10" cy="10" r="10" fill="#D9D9D9"/>
            </svg>
          </div>
          <div class="about-values-2-card-content">
            <div>{{ block.settings.title }}</div>
            <div>{{ block.settings.content }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

