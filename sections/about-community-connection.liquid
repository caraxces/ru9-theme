{%- render 'section_css' -%}

<style>
  .about-community-connection-section {
    padding: 60px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-community-connection-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .about-community-connection-header {
    text-align: center;
    margin-bottom: 50px;
  }
  .about-community-connection-title {
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1a2b4d' }};
    margin-bottom: 30px;
    line-height: 1.3;
  }
  .about-community-connection-text {
    font-size: 16px;
    color: {{ section.settings.text_color | default: '#333333' }};
    line-height: 1.6;
    margin-bottom: 20px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .about-community-connection-quote {
    font-size: 18px;
    color: {{ section.settings.text_color | default: '#333333' }};
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 30px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .about-community-connection-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-top: 50px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-community-connection-section {
      padding: 40px 0;
    }
    .about-community-connection-title {
      font-size: 24px;
    }
    .about-community-connection-cards {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>

<div class="about-community-connection-section">
  <div class="about-community-connection-container">
    <div class="about-community-connection-header">
      {% if section.settings.title != blank %}
        <div class="about-community-connection-title">{{ section.settings.title }}</div>
      {% endif %}
      {% if section.settings.text_1 != blank %}
        <div class="about-community-connection-text">{{ section.settings.text_1 }}</div>
      {% endif %}
      {% if section.settings.quote != blank %}
        <div class="about-community-connection-quote">{{ section.settings.quote }}</div>
      {% endif %}
      {% if section.settings.text_2 != blank %}
        <div class="about-community-connection-text">{{ section.settings.text_2 }}</div>
      {% endif %}
    </div>
    
    <div class="about-community-connection-cards">
      {% for block in section.blocks %}
        {% render 'connection_card', 
          block: block, 
          background_color: section.settings.card_background_color,
          title_color: section.settings.title_color,
          text_color: section.settings.text_color
        %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Community Connection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "html",
      "id": "text_1",
      "label": "Introduction Text"
    },
    {
      "type": "html",
      "id": "quote",
      "label": "Quote Text"
    },
    {
      "type": "html",
      "id": "text_2",
      "label": "Closing Text"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#1a2b4d"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "connection_card",
      "name": "Connection Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Card Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Card Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Card Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Community Connection"
    }
  ]
}
{% endschema %}

