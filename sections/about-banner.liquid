{%- render 'section_css' -%}

<style>
  /* Desktop styles (default) - 1024px and above */
  .about-banner-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-banner-section .page-width {
    padding: 0 60px;
  }
  .about-banner-container {
    flex-shrink: 0;
    position: relative;
    margin: 0 auto;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }
  .about-banner-desktop-image {
    display: block;
  }
  .about-banner-mobile-image {
    display: none;
  }
  .about-banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.overlay_color | default: 'rgba(0, 0, 0, 0.3)' }};
  }
  .about-banner-content {
    text-align: center;
    color: {{ section.settings.text_color | default: '#ffffff' }};
    max-width: 800px;
    padding: 0 40px;
  }
  .about-banner-title {
    font-size: 48px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 20px;
  }
  .about-banner-subtitle {
    font-size: 24px;
    font-weight: 400;
    line-height: 1.4;
    margin-bottom: 0;
  }
  .about-banner-svg-tag {
    position: absolute;
    bottom: -10%;
    right: 40px;
    z-index: 2;
  }
  .about-banner-svg-tag svg {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Mobile styles - 768px and below */
  @media (max-width: 768px) {
    .about-banner-container {
      width: 100%;
      height: 400px;
      flex-shrink: 0;
    }
    .about-banner-desktop-image {
      display: none;
    }
    .about-banner-mobile-image {
      display: block;
    }
    .about-banner-title {
      font-size: 32px;
    }
    .about-banner-subtitle {
      font-size: 18px;
    }
    .about-banner-svg-tag {
      bottom: -30%;
      right: 20px;
    }
  }
</style>

<div class="about-banner-section">
  <div class="page-width">
    <div class="about-banner-container">
      <!-- Desktop Image -->
      <img 
        class="about-banner-image about-banner-desktop-image"
        {% if section.settings.desktop_image != blank %}
          src="{{ section.settings.desktop_image | image_url: width: 1920 }}" 
          alt="{{ section.settings.desktop_image.alt | escape }}"
        {% else %}
          src="https://via.placeholder.com/1920x602/3D6DFF/FFFFFF?text=Desktop+Banner" 
          alt="Desktop Banner"
        {% endif %}
        width="1920"
        height="602"
        loading="lazy"
      >
      
      <!-- Mobile Image -->
      <img 
        class="about-banner-image about-banner-mobile-image"
        {% if section.settings.mobile_image != blank %}
          src="{{ section.settings.mobile_image | image_url: width: 768 }}" 
          alt="{{ section.settings.mobile_image.alt | escape }}"
        {% else %}
          src="https://via.placeholder.com/768x400/3D6DFF/FFFFFF?text=Mobile+Banner" 
          alt="Mobile Banner"
        {% endif %}
        width="768"
        height="400"
        loading="lazy"
      >
      
      {% if section.settings.svg_tag != blank %}
        <div class="about-banner-svg-tag">
          {{ section.settings.svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Banner Image (1920x602px)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image (768x400px)"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Banner Title",
      "default": "<h1>Vì bạn xứng đáng với những điều tốt nhất</h1>"
    },
    {
      "type": "html",
      "id": "subtitle",
      "label": "Banner Subtitle",
      "default": "<p>Khám phá câu chuyện của Ru9 và hành trình mang đến giấc ngủ chất lượng cho người Việt</p>"
    },
    {
      "type": "html",
      "id": "svg_tag",
      "label": "SVG Tag"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "rgba(0, 0, 0, 0.3)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "About Banner"
    }
  ]
}
{% endschema %}
