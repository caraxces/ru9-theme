{% comment %}
  Bundle Products Section
  - Displays 3 selected products in a modern layout
  - Allows adding all products to cart with one click
  - Features smooth animations and Dynamic Island style controls
{% endcomment %}

<div class="bundle-section" id="bundle-section">
  <div class="bundle-left">
    <div class="bundle-gradient-bg"></div>
    <h2 class="bundle-title">{{ section.settings.title }}</h2>
    <div class="bundle-image">
      {% if section.settings.featured_image != blank %}
        <img src="{{ section.settings.featured_image | img_url: 'master' }}" alt="{{ section.settings.title }}" class="fade-in">
      {% else %}
        {% assign couch_product = false %}
        {% for block in section.blocks %}
          {% if block.type == 'product' %}
            {% assign product = all_products[block.settings.product] %}
            {% if product != blank %}
              {% assign couch_product = product %}
              {% break %}
            {% endif %}
          {% endif %}
        {% endfor %}
        
        {% if couch_product %}
          <img src="{{ couch_product.featured_image | img_url: 'medium' }}" alt="{{ couch_product.title }}" class="fade-in">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg fade-in' }}
        {% endif %}
      {% endif %}
    </div>
    <div class="bundle-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </div>
  
  <div class="bundle-right">
    <div class="bundle-header">
      <h3 class="bundle-subtitle">{{ section.settings.subtitle }}</h3>
      <div class="bundle-header-labels">
        <span class="label-product">PRODUCT</span>
        <span class="label-dimensions">DIMENSIONS</span>
      </div>
    </div>
    
    <div class="bundle-products">
      {% for block in section.blocks %}
        {% if block.type == 'product' %}
          {% assign product = all_products[block.settings.product] %}
          {% if product != blank %}
            <div class="bundle-product-item" data-product-id="{{ product.id }}" data-variant-id="{{ product.selected_or_first_available_variant.id }}">
              <div class="bundle-product-name">{{ product.title }}</div>
              <div class="bundle-product-dimensions">{{ block.settings.dimensions }}</div>
              <div class="bundle-product-image">
                <img src="{{ product.featured_image | img_url: '100x100', crop: 'center' }}" alt="{{ product.title }}">
              </div>
              <button class="bundle-add-single" aria-label="Add {{ product.title }} to cart">
                <span>+</span>
              </button>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="bundle-actions-container">
      <div class="bundle-actions">
        <div class="bundle-tools">
          <button class="tool-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <button class="tool-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" fill="currentColor"/>
            </svg>
          </button>
          <button class="tool-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="currentColor"/>
            </svg>
          </button>
        </div>
        
        <button class="bundle-add-all" id="bundle-add-all-button">
          <span class="bundle-add-all-arrow">â†’</span>
        </button>
        
        <div class="bundle-view">
          <button class="view-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 6h16v12H4V6zM4 6v12M20 6v12M4 12h16" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.bundle-section {
  display: flex;
  background: white;
  border-radius: 24px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  max-width: 1000px;
  margin: 40px auto;
  position: relative;
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.6s ease, transform 0.6s ease;
}

.bundle-section.visible {
  opacity: 1;
  transform: translateY(0);
}

@media (max-width: 768px) {
  .bundle-section {
    flex-direction: column;
  }
}

.bundle-left {
  width: 40%;
  padding: 40px;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  background: #8A4FFF;
}

.bundle-gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #8A4FFF 0%, #6A36E5 60%, #9B4FFF 100%);
  z-index: 0;
  overflow: hidden;
}

.bundle-gradient-bg:before {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
  animation: rotate 15s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@media (max-width: 768px) {
  .bundle-left {
    width: 100%;
    padding: 30px;
  }
}

.bundle-title {
  color: white;
  font-size: 3.5rem;
  font-weight: 700;
  margin: 0;
  line-height: 1;
  position: relative;
  z-index: 2;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease forwards 0.2s;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 768px) {
  .bundle-title {
    font-size: 2.5rem;
  }
}

.bundle-image {
  max-width: 100%;
  height: auto;
  margin-top: auto;
  position: relative;
  z-index: 2;
}

.bundle-image img {
  max-width: 100%;
  height: auto;
  opacity: 0;
  transform: scale(0.95);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

.bundle-image img.fade-in {
  opacity: 1;
  transform: scale(1);
}

.bundle-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.shape {
  position: absolute;
  border-radius: 50%;
  opacity: 0;
  animation: fadeIn 0.8s ease forwards;
}

.shape-1 {
  width: 60px;
  height: 60px;
  background: rgba(255, 255, 255, 0.1);
  top: 10%;
  left: 10%;
  animation-delay: 0.3s;
}

.shape-2 {
  width: 100px;
  height: 100px;
  background: rgba(255, 255, 255, 0.1);
  bottom: 10%;
  right: 10%;
  animation-delay: 0.5s;
}

.shape-3 {
  width: 120px;
  height: 120px;
  background: #FF7A50;
  border-radius: 50%;
  top: -30px;
  right: -30px;
  filter: blur(20px);
  opacity: 0;
  animation: fadeIn 1s ease forwards 0.7s, float 6s ease-in-out infinite;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

.bundle-right {
  width: 60%;
  padding: 40px;
  display: flex;
  flex-direction: column;
}

@media (max-width: 768px) {
  .bundle-right {
    width: 100%;
    padding: 30px;
  }
}

.bundle-header {
  margin-bottom: 30px;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease forwards 0.4s;
}

.bundle-subtitle {
  font-size: 1.8rem;
  font-weight: 600;
  margin: 0 0 20px 0;
}

.bundle-header-labels {
  display: grid;
  grid-template-columns: 1fr 1fr 50px 50px;
  color: #888;
  font-size: 0.75rem;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.bundle-products {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-bottom: 40px;
  overflow-y: auto;
  max-height: 300px;
  padding-right: 10px;
  scrollbar-width: thin;
  scrollbar-color: #ddd transparent;
}

.bundle-products::-webkit-scrollbar {
  width: 5px;
}

.bundle-products::-webkit-scrollbar-track {
  background: transparent;
}

.bundle-products::-webkit-scrollbar-thumb {
  background-color: #ddd;
  border-radius: 10px;
}

.bundle-product-item {
  display: grid;
  grid-template-columns: 1fr 1fr 50px 50px;
  align-items: center;
  gap: 10px;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.5s ease forwards;
}

.bundle-product-item:nth-child(1) {
  animation-delay: 0.5s;
}

.bundle-product-item:nth-child(2) {
  animation-delay: 0.7s;
}

.bundle-product-item:nth-child(3) {
  animation-delay: 0.9s;
}

.bundle-product-name {
  font-weight: 500;
}

.bundle-product-dimensions {
  color: #888;
  font-size: 0.9rem;
}

.bundle-product-image {
  width: 40px;
  height: 40px;
  overflow: hidden;
  border-radius: 4px;
}

.bundle-product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.bundle-product-item:hover .bundle-product-image img {
  transform: scale(1.1);
}

.bundle-add-single {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: #f5f5f5;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 1.2rem;
}

.bundle-add-single:hover {
  background: #e0e0e0;
  transform: scale(1.1);
}

.bundle-actions-container {
  margin-top: auto;
  display: flex;
  justify-content: center;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease forwards 1.1s;
}

.bundle-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f5f5f5;
  border-radius: 30px;
  padding: 5px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.bundle-actions:hover {
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
}

.bundle-tools {
  display: flex;
  gap: 5px;
}

.tool-button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s;
  color: #555;
}

.tool-button:hover {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(1.1);
}

.bundle-add-all {
  width: 50px;
  height: 50px;
  border-radius: 12px;
  background: #222;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
  color: white;
  margin: 0 10px;
}

.bundle-add-all:hover {
  background: #000;
  transform: scale(1.05);
}

.bundle-add-all:active {
  transform: scale(0.95);
}

.bundle-add-all-arrow {
  font-size: 1.5rem;
}

.view-button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s;
  color: #555;
}

.view-button:hover {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(1.1);
}

.cart-notification {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background-color: #222;
  color: white;
  padding: 15px 25px;
  border-radius: 12px;
  transform: translateY(100px);
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 1000;
}

.cart-notification.show {
  transform: translateY(0);
  opacity: 1;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(34, 34, 34, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(34, 34, 34, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(34, 34, 34, 0);
  }
}

.bundle-add-all.pulse {
  animation: pulse 1.5s infinite;
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const bundleSection = document.getElementById('bundle-section');
    const addAllButton = document.getElementById('bundle-add-all-button');
    const productItems = document.querySelectorAll('.bundle-product-item');
    const singleAddButtons = document.querySelectorAll('.bundle-add-single');
    const bundleImage = document.querySelector('.bundle-image img');
    
    // Show section with animation when in viewport
    function isInViewport(element) {
      const rect = element.getBoundingClientRect();
      return (
        rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
        rect.bottom >= 0
      );
    }
    
    function handleScroll() {
      if (isInViewport(bundleSection) && !bundleSection.classList.contains('visible')) {
        bundleSection.classList.add('visible');
        
        // Add pulse animation to the add all button after all animations
        setTimeout(() => {
          addAllButton.classList.add('pulse');
          setTimeout(() => {
            addAllButton.classList.remove('pulse');
          }, 3000);
        }, 2000);
      }
    }
    
    // Initial check and add scroll listener
    handleScroll();
    window.addEventListener('scroll', handleScroll);
    
    // Fade in the product image
    if (bundleImage) {
      setTimeout(() => {
        bundleImage.classList.add('fade-in');
      }, 300);
    }
    
    // Add single product to cart with animation
    singleAddButtons.forEach(button => {
      button.addEventListener('click', function() {
        const productItem = this.closest('.bundle-product-item');
        const variantId = productItem.dataset.variantId;
        
        // Add animation
        this.classList.add('adding');
        this.disabled = true;
        
        addToCart(variantId, 1).then(() => {
          setTimeout(() => {
            this.classList.remove('adding');
            this.disabled = false;
          }, 1000);
        });
      });
    });
    
    // Add all products to cart with animation
    addAllButton.addEventListener('click', function() {
      const items = [];
      
      productItems.forEach(item => {
        items.push({
          id: item.dataset.variantId,
          quantity: 1
        });
      });
      
      // Add animation
      this.classList.add('adding');
      this.disabled = true;
      
      addMultipleToCart(items).then(() => {
        setTimeout(() => {
          this.classList.remove('adding');
          this.disabled = false;
        }, 1000);
      });
    });
    
    // Smooth scroll for product list
    const productsList = document.querySelector('.bundle-products');
    if (productsList) {
      productsList.addEventListener('wheel', function(e) {
        if (this.scrollHeight > this.clientHeight) {
          e.preventDefault();
          const scrollSpeed = 30;
          this.scrollTop += e.deltaY > 0 ? scrollSpeed : -scrollSpeed;
        }
      }, { passive: false });
    }
    
    // Function to add a single item to cart
    function addToCart(id, qty) {
      return fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          items: [{
            id: id,
            quantity: qty
          }]
        })
      })
      .then(response => response.json())
      .then(data => {
        // Update cart drawer or show notification
        updateCartNotification();
        return data;
      })
      .catch(error => {
        console.error('Error:', error);
        return error;
      });
    }
    
    // Function to add multiple items to cart
    function addMultipleToCart(items) {
      return fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          items: items
        })
      })
      .then(response => response.json())
      .then(data => {
        // Update cart drawer or show notification
        updateCartNotification();
        return data;
      })
      .catch(error => {
        console.error('Error:', error);
        return error;
      });
    }
    
    // Function to update cart notification with animation
    function updateCartNotification() {
      // Create notification element
      const notification = document.createElement('div');
      notification.className = 'cart-notification';
      notification.textContent = 'Products added to cart!';
      document.body.appendChild(notification);
      
      // Show notification with animation
      setTimeout(() => {
        notification.classList.add('show');
        setTimeout(() => {
          notification.classList.remove('show');
          setTimeout(() => {
            notification.remove();
          }, 300);
        }, 2000);
      }, 10);
      
      // Refresh cart drawer if it exists
      if (typeof window.refreshCart === 'function') {
        window.refreshCart();
      }
    }
  });
</script>

