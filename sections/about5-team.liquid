{%- comment -%} Include Design System CSS {%- endcomment -%}
{% render 'about-design-system' %}

<style>
.about-team__content {
  display: grid;
  grid-template-columns: 759px 1fr;
  gap: var(--gutter-desktop);
  align-items: center;
}

.about-team__video {
  width: 100%;
  max-width: 759px;
  border-radius: var(--radius-sm);
  overflow: hidden;
  background: var(--color-background-light);
}

.about-team__video video {
  width: 100%;
  height: auto;
  display: block;
}

.about-team__text {
  font-size: var(--font-size-xl);
  line-height: var(--line-height-relaxed);
  color: var(--color-text-primary);
  text-align: justify;
}

@media (max-width: 749px) {
  .about-team__content {
    grid-template-columns: 1fr;
    gap: 0;
  }
  
  .about-team__video {
    order: 1;
    width: 100%;
    max-width: 358px;
    height: 246px;
    background: #f0f7ff;
    border-radius: 5px;
    overflow: hidden;
    margin-bottom: 24px;
  }
  
  .about-team__video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .about-team__text {
    order: 2;
    font-size: 14px;
    line-height: 1.4;
    color: #000;
    text-align: justify;
  }
}
</style>

<section class="about-section about-team page-width">
  <div class="about-team__content">
    <div class="about-team__video">
      {%- if section.settings.video != blank -%}
        {{ section.settings.video | video_tag:
          class: 'about-team__video-element',
          autoplay: true,
          loop: true,
          muted: true,
          playsinline: true,
          controls: false,
          image_size: '1518x932'
        }}
      {%- endif -%}
    </div>
    <div class="about-team__text">
      {%- if section.settings.text != blank -%}
        {{ section.settings.text }}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About5 - Team",
  "tag": "section",
  "class": "about5-team-section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Team Video",
      "info": "Upload video to Shopify CDN. Recommended size: 759x466px"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Team Text",
      "default": "<p>Ru9 được xây dựng không chỉ từ mong muốn mang đến giấc ngủ trọn vẹn, mà còn từ tâm huyết của mỗi thành viên trong đại gia đình Ru9. Từ đội ngũ nghiên cứu – thiết kế, sản xuất đến các bạn showroom trực tiếp đồng hành cùng khách hàng, tất cả đều góp sức trong quy trình khép kín, minh bạch, không qua trung gian, giúp khách hàng có những trải nghiệm trọn vẹn nhất.</p>"
    }
  ],
  "presets": [
    {
      "name": "About5 - Team"
    }
  ]
}
{% endschema %}

