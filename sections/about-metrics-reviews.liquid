<section class="metrics-reviews sky">
  <div class="container">
    <div class="metrics">
      {% if section.settings.headline != blank %}
        <h2>{{ section.settings.headline }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="desc">{{ section.settings.description }}</p>
      {% endif %}

      <div class="metrics-grid">
        <div class="metric-card">
          {% if section.settings.metric_1_number != blank %}
            <div class="metric-number">{{ section.settings.metric_1_number }}</div>
          {% endif %}
          {% if section.settings.metric_1_caption != blank %}
            <div class="metric-caption">{{ section.settings.metric_1_caption }}</div>
          {% endif %}
        </div>
        
        <div class="metric-card">
          {% if section.settings.metric_2_number != blank %}
            <div class="metric-number">{{ section.settings.metric_2_number }}</div>
          {% endif %}
          {% if section.settings.metric_2_caption != blank %}
            <div class="metric-caption">{{ section.settings.metric_2_caption }}</div>
          {% endif %}
        </div>
        
        <div class="metric-card">
          {% if section.settings.metric_3_number != blank %}
            <div class="metric-number">{{ section.settings.metric_3_number }}</div>
          {% endif %}
          {% if section.settings.metric_3_caption != blank %}
            <div class="metric-caption">{{ section.settings.metric_3_caption }}</div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="sep"></div>

    <div class="reviews">
      <div class="reviews-grid">
        <div class="review-card">
          <div class="review-image img ratio-4x3">
            {% if section.settings.review_1_image != blank %}
              {{ section.settings.review_1_image | image_url: width: 300 | image_tag: loading: 'lazy' }}
            {% endif %}
          </div>
          {% if section.settings.review_1_text != blank %}
            <p>{{ section.settings.review_1_text }}</p>
          {% endif %}
          {% if section.settings.review_1_author != blank %}
            <div class="review-author">{{ section.settings.review_1_author }}</div>
          {% endif %}
        </div>
        
        <div class="review-card">
          <div class="review-image img ratio-4x3">
            {% if section.settings.review_2_image != blank %}
              {{ section.settings.review_2_image | image_url: width: 300 | image_tag: loading: 'lazy' }}
            {% endif %}
          </div>
          {% if section.settings.review_2_text != blank %}
            <p>{{ section.settings.review_2_text }}</p>
          {% endif %}
          {% if section.settings.review_2_author != blank %}
            <div class="review-author">{{ section.settings.review_2_author }}</div>
          {% endif %}
        </div>
        
        <div class="review-card">
          <div class="review-image img ratio-4x3">
            {% if section.settings.review_3_image != blank %}
              {{ section.settings.review_3_image | image_url: width: 300 | image_tag: loading: 'lazy' }}
            {% endif %}
          </div>
          {% if section.settings.review_3_text != blank %}
            <p>{{ section.settings.review_3_text }}</p>
          {% endif %}
          {% if section.settings.review_3_author != blank %}
            <div class="review-author">{{ section.settings.review_3_author }}</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.metrics h2 {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 16px;
}

.metrics .desc {
  max-width: 700px;
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: 32px;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18px;
}

.metric-card {
  background: #F7FAFF;
  border: 1px solid var(--c-border);
  border-radius: 14px;
  padding: 18px;
  text-align: center;
}

.metric-number {
  font-size: 32px;
  font-weight: 800;
  color: var(--c-primary);
  margin-bottom: 8px;
}

.metric-caption {
  font-size: 12px;
  color: var(--c-muted);
}

.reviews-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18px;
}

.review-card {
  background: white;
  border: 1px solid var(--c-border);
  border-radius: 14px;
  padding: 16px;
  box-shadow: var(--shadow);
}

.review-card p {
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: 12px;
}

.review-author {
  font-weight: 700;
  color: #223255;
  margin-top: 10px;
}

@media (max-width: 768px) {
  .metrics h2 {
    font-size: 22px;
  }
  
  .metrics-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .metrics-grid .metric-card:last-child {
    grid-column: 1 / -1;
    max-width: 200px;
    margin: 0 auto;
  }
  
  .reviews-grid {
    grid-template-columns: 1fr;
  }
}
</style>

