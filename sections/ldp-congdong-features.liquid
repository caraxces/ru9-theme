		"label": "Color"
		},
		{
		 "type": "color",
      	"id": "background_color",
		"label": "Background Color"
		},
{
		 "type": "text",
      	"id": "background_gradient_color",
		"label": "Background Gradient"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		}, {
			"type": "text",
			"id": "sub_title",
			"label": "Sub title"
		},{
			"type": "text",
			"id": "description",
			"label": "Description"
		}
	],
	"blocks": [{
			"type": "features",
			"name": "features",
			"settings": [
			{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "richtext",
					"id": "content",
					"label": "Content"
				},
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image desktop"
				},
				{
					"type": "image_picker",
					"id": "image_mobile",
					"label": "Image Mobile"
				},
				{
					"type": "checkbox",
					"id": "use_video",
					"label": "Use video"
				},
{
					"type": "text",
					"id": "video",
					"label": "Video desktop"
				},
				{
					"type": "text",
					"id": "video_mobile",
					"label": "Video Mobile"
				}
			]

