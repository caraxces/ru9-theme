<script src="{{ 'lark-api.js' | asset_url }}" defer></script>
<script>
  // Đảm bảo script LarkAPI đã tải xong
  window.addEventListener('DOMContentLoaded', function() {
    if (typeof window.LarkAPI === 'undefined') {
      console.error('LarkAPI is not loaded properly');
      return;
    }
    
    // Thêm event listener cho nút search và input field (enter)
    document.querySelector('.search-btn').addEventListener('click', searchWarranty);
    document.getElementById('warrantyCode').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        searchWarranty();
      }
    });
  });

  async function searchWarranty() {
    const warrantyCode = document.getElementById('warrantyCode').value.trim();
    if (!warrantyCode) {
      alert('Vui lòng nhập số điện thoại mua hàng');
      return;
    }
    
    const resultDiv = document.getElementById('warrantyResult');
    const statusMessage = document.getElementById('statusMessage');
    const statusIndicator = document.querySelector('.status-indicator');
    const customerDetails = document.getElementById('customerDetails');
    const loadingIndicator = document.getElementById('loadingIndicator');
    
    try {
      // Hiển thị loading
      resultDiv.style.display = 'none';
      loadingIndicator.style.display = 'flex';
      
      // Gọi API để lấy dữ liệu
      const data = await LarkAPI.getBitableRecords(warrantyCode);
      console.log('Received data:', data); // Log để debug
      
      // Ẩn loading
      loadingIndicator.style.display = 'none';
      
      // Reset các phần tử
      resultDiv.style.display = 'block';
      customerDetails.innerHTML = '';
      
      if (!data) {
        statusIndicator.style.background = '#dc3545'; // Red
        statusMessage.textContent = 'Không tìm thấy thông tin bảo hành cho số điện thoại này';
        return;
      }

      // Cập nhật trạng thái bảo hành
      updateWarrantyStatus(data, statusIndicator, statusMessage);
      
      // Hiển thị tất cả thông tin khách hàng
      displayCustomerDetails(data, customerDetails);
      
    } catch (error) {
      loadingIndicator.style.display = 'none';
      resultDiv.style.display = 'block';
      statusIndicator.style.background = '#dc3545'; // Red
      statusMessage.textContent = 'Có lỗi xảy ra, vui lòng thử lại sau';
      console.error('Error:', error);
    }
  }
  
  // Cập nhật hàm updateWarrantyStatus để thêm xử lý timeline
  function updateWarrantyStatus(data, statusIndicator, statusMessage) {
    const timelineItems = document.querySelectorAll('.timeline-item');
    
    // Reset all items
    timelineItems.forEach(item => {
      item.classList.remove('active', 'completed');
      // Thêm "null" trong suốt cho tất cả timeline-date
      const dateElement = item.querySelector('.timeline-date');
      if (dateElement) {
        dateElement.textContent = 'null';
        dateElement.classList.add('empty-date');
      }
    });

    // Cập nhật timeline dates
    if (data['Thời gian thu hồi']) {
      const pickupDate = document.querySelector('.timeline-item:nth-child(3) .timeline-date');
      pickupDate.textContent = data['Thời gian thu hồi'];
      pickupDate.classList.remove('empty-date');
    }
    if (data['Thời gian trả hàng']) {
      const returnDate = document.querySelector('.timeline-item:nth-child(5) .timeline-date');
      returnDate.textContent = data['Thời gian trả hàng'];
      returnDate.classList.remove('empty-date');
    }

    let currentStep = 0;
    
    if (!data['Thời gian thu hồi']) {
      currentStep = 1; // Đang xử lý
    } else if (data['Thời gian thu hồi'] && !data['Thời gian trả hàng']) {
      currentStep = 2; // Sẽ tới lấy sản phẩm
    } else if (data['Thời gian thu hồi'] && data['Thời gian trả hàng'] === null) {
      currentStep = 3; // Đang bảo hành
    } else if (data['Thời gian trả hàng']) {
      currentStep = 4; // Sẽ gửi trả
    }

    // Đánh dấu các bước đã hoàn thành và bước hiện tại
    timelineItems.forEach((item, index) => {
      if (index < currentStep) {
        item.classList.add('completed');
      } else if (index === currentStep) {
        item.classList.add('active');
      }
    });

    // Giữ nguyên logic cũ
    if (!data['Thời gian thu hồi']) {
      statusIndicator.style.background = '#ffc107';
      statusMessage.textContent = 'Đang xử lý thông tin bảo hành';
    } else if (data['Thời gian thu hồi'] && !data['Thời gian trả hàng']) {
      statusIndicator.style.background = '#17a2b8';
      statusMessage.textContent = `Chúng tôi sẽ tới thu hồi sản phẩm bảo hành vào ngày ${data['Thời gian thu hồi']}`;
    } else if (data['Thời gian thu hồi'] && data['Thời gian trả hàng'] === null) {
      statusIndicator.style.background = '#28a745';
      statusMessage.textContent = 'Chúng tôi đang tiến hành bảo hành cho sản phẩm của bạn';
    } else if (data['Thời gian trả hàng']) {
      statusIndicator.style.background = '#28a745';
      statusMessage.textContent = `Hàng của bạn sẽ sẵn sàng vào ngày ${data['Thời gian trả hàng']}`;
    }
  }
  
  // Hàm hiển thị tất cả thông tin khách hàng
  function displayCustomerDetails(data, container) {
    // Thứ tự hiển thị các trường quan trọng trước
    const priorityFields = [
      'Họ và Tên', 
      'SĐT', 
      'Số điện thoại mua hàng',
      'Địa chỉ',
      'Tên sản phẩm',
      'Kích thước',
      'Vấn đề',
      'Thời gian thu hồi',
      'Thời gian trả hàng'
    ];
    
    // Hiển thị các trường ưu tiên trước
    priorityFields.forEach(field => {
      if (data[field] !== undefined && data[field] !== null && data[field] !== '') {
        addDetailItem(container, field, data[field]);
      }
    });
    
    // Hiển thị các trường còn lại
    for (const [key, value] of Object.entries(data)) {
      if (!priorityFields.includes(key) && value !== undefined && value !== null && value !== '') {
        addDetailItem(container, key, value);
      }
    }
  }
  
  // Thêm một mục thông tin chi tiết
  function addDetailItem(container, label, value) {
    const detailItem = document.createElement('div');
    detailItem.className = 'detail-item';
    
    const detailLabel = document.createElement('div');
    detailLabel.className = 'detail-label';
    detailLabel.textContent = label;
    
    const detailValue = document.createElement('div');
    detailValue.className = 'detail-value';
    detailValue.textContent = value;
    
    detailItem.appendChild(detailLabel);
    detailItem.appendChild(detailValue);
    container.appendChild(detailItem);
  }
</script>
