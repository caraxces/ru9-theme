<style>
  .site-nav__link,
  .site-nav__dropdown-link:not(.site-nav__dropdown-link--top-level) {
    font-family: "Be Vietnam Pro", sans-serif;
    color: #000;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.5;
  }
  {% if settings.type_navigation_capitalize %}
    .site-nav__link, .mobile-nav__link--top-level {
      text-transform: uppercase;
      letter-spacing: 0.2em;
    }
    .mobile-nav__link--top-level {
      font-size: 1.1em;
    }
  {% endif %}

  {% if mainmenu.length > 6 %}
    .site-nav__link {
      padding-left: 10px;
      padding-right: 10px;
    }
  {% endif %}

  {% unless section.settings.mega_menu_images %}
    .megamenu__collection-image {
      display: none;
    }
  {% endunless %}

  {%- if settings.color_header == settings.color_body_bg or settings.color_body_bg contains settings.color_header -%}
    .site-header {
      box-shadow: 0 0 1px rgba(0,0,0,0.4);
    }

    .toolbar + .header-sticky-wrapper .site-header {
      border-top: 0;
    }
  {%- endif -%}

  [data-section-id="{{ section.id }}"] a {
    font-family: "Be Vietnam Pro", sans-serif !important;
  }

  /* Navigation arrow hover effect */
  .site-nav__link:hover .nav-arrow {
    transform: rotate(180deg);
  }

  /* Announcement message slide up animation */
  @keyframes slideUp {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-2px);
    }
  }

  /* Switch between two announcement messages */
  @keyframes switchMessages {
    0%, 45% {
      opacity: 1;
      transform: translateY(0);
    }
    50%, 95% {
      opacity: 0;
      transform: translateY(-10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Toolbar dropdown hover effects */
  .toolbar__menu-wrapper:hover .toolbar__dropdown {
    opacity: 1 !important;
    visibility: visible !important;
    transform: translateY(0) !important;
  }

  .toolbar__menu-wrapper:hover .toolbar-arrow {
    transform: rotate(180deg);
  }

  .toolbar__dropdown a:hover {
    background-color: #f5f5f5 !important;
  }

  @media screen and (max-width: 989px) {
    .toolbar__content {
      justify-content: center !important;
    }
    .header-layout--mobile {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12.5px 0;
    }
    .header-layout--mobile .header-item--left,
    .header-layout--mobile .header-item--icons {
      display: flex;
      align-items: center;
      flex: 1;
    }
    .header-layout--mobile .header-item--left {
      justify-content: flex-start;
    }
    .header-layout--mobile .header-item--icons {
      justify-content: flex-end;
    }
    .header-layout--mobile .header-item--logo {
      flex-shrink: 0;
      padding: 0 15px;
    }
  }

  @media screen and (min-width: 990px) {
    [data-section-id="{{ section.id }}"] .page-width {
        max-width: 100%;
        padding-left: 110px;
        padding-right: 110px;
    }

    [data-section-id="{{ section.id }}"] .site-header {
      height: 68px;
      min-height: 68px;
    }

    [data-section-id="{{ section.id }}"] .site-header > .page-width,
    [data-section-id="{{ section.id }}"] .site-header > .page-width > .medium-down--hide {
      height: 100%;
    }

    [data-section-id="{{ section.id }}"] .header-layout {
      height: 100%;
      display: flex;
      align-items: center;
    }

    [data-section-id="{{ section.id }}"] .header-item--navigation {
      height: 100%;
      display: flex;
      align-items: center;
    }

    .header-wrapper--sticky .site-nav__link,
    .header-wrapper--sticky .site-nav__link--icon {
      color: #000 !important;
    }

    .site-header--stuck,
    .header-wrapper--sticky {
      background-color: #ffffff !important;
    }

    .site-header--opening .site-nav__dropdown {
      background-color: #ffffff !important;
    }
  }
</style>

<div class="relative" data-section-id="{{ section.id }}" data-section-type="header">
  {%- unless overlay_header -%}
    {%- if section.settings.show_locale_selector
      or section.settings.show_currency_selector
      or section.settings.toolbar_social
      or section.settings.toolbar_menu_1 != blank
      or section.settings.toolbar_menu_2 != blank
      or section.settings.announcement_message_1 != blank
      or section.settings.announcement_message_2 != blank
    -%}
      {%- render 'toolbar',
        page_width: page_width,
        section: section,
        toolbar_menu_1: toolbar_menu_1,
        toolbar_menu_2: toolbar_menu_2,
        overlay_header: overlay_header
      -%}
    {%- endif -%}
  {%- endunless -%}

  <div class="header-sticky-wrapper">
    <div id="HeaderWrapper" class="header-wrapper{% if overlay_header %} header-wrapper--sticky is-light{% endif %}">
      {%- if overlay_header -%}
        {%- if section.settings.show_locale_selector
          or section.settings.show_currency_selector
          or section.settings.toolbar_social
          or section.settings.toolbar_menu_1 != blank
          or section.settings.toolbar_menu_2 != blank
          or section.settings.announcement_message_1 != blank
          or section.settings.announcement_message_2 != blank
        -%}
          {%- render 'toolbar', section: section, toolbar_menu_1: toolbar_menu_1, toolbar_menu_2: toolbar_menu_2, overlay_header: overlay_header -%}
        {%- endif -%}
      {%- endif -%}
      <header
        id="SiteHeader"
        class="site-header{% if settings.type_navigation_style == 'heading' %} site-header--heading-style{% endif %}"
        data-sticky="{{ sticky_header }}"
        data-overlay="{{ overlay_header }}"
      >
        <div
          class="page-width"
          style="{% if section.settings.section_width != 'page-width' %}--page-width: {{ page_width }}{% endif %}"
        >
          <div class="large-up--hide">
            <div class="header-layout--mobile">
              <div class="header-item--left">
                <button
                  type="button"
                  class="site-nav__link site-nav__link--icon js-drawer-open-nav"
                  aria-controls="NavDrawer"
                >
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    class="icon icon-hamburger"
                    viewBox="0 0 22 20"
                    fill="none"
                  >
                    <path d="M0.5 0.666504H21.5V2.99984H0.5V0.666504ZM0.5 8.83317H21.5V11.1665H0.5V8.83317ZM0.5 16.9998H21.5V19.3332H0.5V16.9998Z" fill="#2D3748"/>
                  </svg>
                  <span class="icon__fallback-text">{{ 'general.drawers.navigation' | t }}</span>
                </button>
                {%- if settings.search_enable -%}
                  <a
                    href="{{ routes.search_url }}"
                    class="site-nav__link site-nav__link--icon js-search-header"
                    rel="nofollow"
                  >
                    {% render 'icon-search' %}
                    <span class="icon__text visually-hidden">{{ 'general.search.title' | t }}</span>
                  </a>
                {%- endif -%}
              </div>
              <div class="header-item header-item--logo">
                {%- render 'header-logo-block', section: section -%}
              </div>
              <div class="header-item header-item--icons">
                 {%- render 'header-icons', section: section, mobile: true -%}
              </div>
            </div>
          </div>

          <div class="medium-down--hide">
            <div
              class="header-layout header-layout--{{ section.settings.main_menu_alignment }}"
              data-logo-align="{{ logo_alignment }}"
            >
              {% comment %}
                <button
                  type="button"
                  class="site-nav__link site-nav__link--icon site-nav__link--hamburger js-drawer-open-nav large-up--hide"
                  aria-controls="NavDrawer"
                >
                <svg
                  aria-hidden="true"
                  focusable="false"
                  role="presentation"
                  class="icon icon-hamburger"
                  viewBox="0 0 28 28"
                >
                  <title>icon-hamburger</title><path d="M3.5 4.6665H24.5V6.99984H3.5V4.6665ZM3.5 12.8332H24.5V15.1665H3.5V12.8332ZM3.5 20.9998H24.5V23.3332H3.5V20.9998Z"/>
                </svg>

                <span class="icon__fallback-text">{{ 'general.drawers.navigation' | t }}</span>
              </button>
            {% endcomment %}
            {%- if section.settings.main_menu_alignment == 'left'
              or section.settings.main_menu_alignment == 'left-center'
              or section.settings.main_menu_alignment == 'left-drawer'
            -%}
              <button
                type="button"
                class="site-nav__link site-nav__link--icon js-drawer-open-nav{% if section.settings.main_menu_alignment == 'left' or section.settings.main_menu_alignment == 'left-center' %} large-up--hide{% endif %}"
                aria-controls="NavDrawer"
              >
                <svg
                  aria-hidden="true"
                  focusable="false"
                  role="presentation"
                  class="icon icon-hamburger"
                  viewBox="0 0 22 20"
                  fill="none"
                >
                  <path d="M0.5 0.666504H21.5V2.99984H0.5V0.666504ZM0.5 8.83317H21.5V11.1665H0.5V8.83317ZM0.5 16.9998H21.5V19.3332H0.5V16.9998Z" fill="#2D3748"/>
                </svg>

                <span class="icon__fallback-text">{{ 'general.drawers.navigation' | t }}</span>
              </button>
            {%- endif -%}
            {%- if logo_alignment == 'left' -%}
              <div class="header-item header-item--logo">
                {%- render 'header-logo-block', section: section -%}
              </div>
            {%- endif -%}

            {%- if logo_alignment == 'left' and section.settings.main_menu_alignment != 'left-drawer' -%}
              <div
                class="header-item header-item--navigation{% if section.settings.main_menu_alignment == 'left-center' %} text-center{% endif %}"
                {% unless disable_aria %}
                  role="navigation" aria-label="Primary"
                {% endunless %}
              >
                {%- render 'header-desktop-nav',
                  main_menu: main_menu,
                  section: section,
                  dropdown_alignment: dropdown_alignment,
                  hover_menu: section.settings.hover_menu
                -%}
              </div>
            {%- endif -%}

            {%- if logo_alignment == 'center' -%}
              <div class="header-item header-item--left header-item--navigation">
                {%- if section.settings.main_menu_alignment == 'center-left' -%}
                  {%- render 'header-desktop-nav',
                    main_menu: main_menu,
                    section: section,
                    dropdown_alignment: dropdown_alignment,
                    hover_menu: section.settings.hover_menu
                  -%}
                {%- endif -%}

                <div
                  class="site-nav{% unless section.settings.main_menu_alignment == 'center-drawer' %} medium-up--hide{% endunless %}"
                ></div>
              </div>

              {%- if section.settings.main_menu_alignment == 'center-split' -%}
                {%- render 'header-split-nav',
                  main_menu: main_menu,
                  section: section,
                  dropdown_alignment: dropdown_alignment,
                  hover_menu: section.settings.hover_menu
                -%}
              {%- endif -%}

              {%- if section.settings.main_menu_alignment != 'center-split' -%}
                <div class="header-item header-item--logo">
                  {%- render 'header-logo-block', section: section -%}
                </div>
              {%- endif -%}
            {%- endif -%}

            <div class="header-item header-item--icons">
              {%- render 'header-icons', section: section -%}
            </div>

            {%- if section.settings.main_menu_alignment == 'center' -%}
              <div class="text-center">
                {%- render 'header-desktop-nav',
                  main_menu: main_menu,
                  section: section,
                  dropdown_alignment: dropdown_alignment,
                  hover_menu: section.settings.hover_menu
                -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      </header>
    </div>
  </div>
  <div class="site-header__search-container">
    <div class="site-header__search">
      <div class="page-width">
        {% render 'predictive-search', context: 'header' %}
      </div>
    </div>
  </div>
</div>

