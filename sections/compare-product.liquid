<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Desktop table drag functionality
    function initDesktopDrag() {
      const tableWrapper = document.querySelector('.table-wrapper');
      
      if (!tableWrapper) return;
      
      let isDown = false;
      let startX;
      let scrollLeft;
      let isDragging = false;

      function dragStart(e) {
        // Don't start drag if clicking on product links or buttons
        if (e.target.closest('a') || e.target.closest('button')) {
          isDown = false;
          return;
        }
        isDown = true;
        isDragging = false;
        tableWrapper.classList.add('grabbing');
        startX = e.type === 'touchstart' ? e.touches[0].pageX : e.pageX;
        scrollLeft = tableWrapper.scrollLeft;
        if (e.type === 'touchstart') {
          window.addEventListener('touchmove', dragMove);
          window.addEventListener('touchend', dragEnd);
        }
      }

      function dragMove(e) {
        if (!isDown) return;
        const currentX = e.type === 'touchmove' ? e.touches[0].pageX : e.pageX;
        const walk = currentX - startX;
        
        if (Math.abs(walk) > 5) {
          isDragging = true;
        }
        
        if (isDragging) {
          e.preventDefault();
        }
        
        tableWrapper.scrollLeft = scrollLeft - walk;
      }

      function dragEnd() {
        if (!isDown) return;
        isDown = false;
        isDragging = false;
        tableWrapper.classList.remove('grabbing');
        window.removeEventListener('touchmove', dragMove);
        window.removeEventListener('touchend', dragEnd);
      }

      // Mouse events
      tableWrapper.addEventListener('mousedown', dragStart);
      tableWrapper.addEventListener('mousemove', dragMove);
      tableWrapper.addEventListener('mouseup', dragEnd);
      tableWrapper.addEventListener('mouseleave', dragEnd);

      // Touch events
      tableWrapper.addEventListener('touchstart', dragStart);

      // Prevent link clicks when dragging
      tableWrapper.addEventListener('click', (e) => {
        if (isDragging) {
          e.preventDefault();
          e.stopPropagation();
        }
      }, true);

      // Prevent default link behavior during drag
      tableWrapper.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', e => {
          if (isDragging) {
            e.preventDefault();
            e.stopPropagation();
          }
        });
      });
    }
    
    // Function to match row heights in mobile table
    function matchRowHeights() {
      if (window.innerWidth <= 768) {
        const rows = document.querySelectorAll('.mobile-comparison-table tr');
        
        rows.forEach(row => {
          // Reset heights first
          const cells = row.querySelectorAll('td, th');
          cells.forEach(cell => {
            cell.style.height = 'auto';
          });
          
          // Get the tallest cell
          let maxHeight = 0;
          cells.forEach(cell => {
            const height = cell.offsetHeight;
            if (height > maxHeight) {
              maxHeight = height;
            }
          });
          
          // Set all cells to the tallest height
          cells.forEach(cell => {
            cell.style.height = maxHeight + 'px';
          });
        });
      }
    }
    
    // Initialize drag functionality
    initDesktopDrag();
    
    // Run on load and resize
    window.addEventListener('resize', () => {
      matchRowHeights();
    });
    window.addEventListener('load', () => {
      matchRowHeights();
    });
    
    // Run after a short delay to ensure all content is loaded
    setTimeout(() => {
      matchRowHeights();
    }, 500);
  });
</script>

