      <h2 class="section-header__title">{{ section.settings.title }}</h2>
      <div class="rte text-lg">{{ section.settings.description }}</div>
    </div>

    <!-- Desktop Comparison Table -->
    <div class="mattress-comparison-table desktop-table small--hide">
      <div class="table-container">
        <div class="table-wrapper">
          <table>
            <!-- Header Row -->
            <tr class="header-row">
              <th class="first-column"></th>
              {%- for block in section.blocks -%}
                <th class="product-column">{{ block.settings.product_title }}</th>
              {%- endfor -%}
            </tr>
        
            <!-- Image Row -->
            <tr class="image-row">
              <td class="first-column"></td>
              {%- for block in section.blocks -%}
                <td class="product-column">
                  {%- if block.settings.product_image -%}
                    <img 
                      src="{{ block.settings.product_image | image_url: width: 320, height: 240, crop: 'center' }}" 
                      alt="{{ block.settings.product_title }}"
                      width="320"
                      height="240"
                      loading="lazy"
                    >
                  {%- endif -%}
                </td>
              {%- endfor -%}
            </tr>
        
            <!-- Features Row -->
            <tr class="features-row">
              <td class="first-column">Đặc tính sản phẩm</td>
              {%- for block in section.blocks -%}
                <td class="product-column">
                  {{ block.settings.product_features | newline_to_br }}
                </td>
              {%- endfor -%}
            </tr>
            
            <!-- Comfort Row -->
            <tr class="comfort-row">
              <td class="first-column">Độ êm ái</td>
              {%- for block in section.blocks -%}
                <td class="product-column">
                  {%- if block.settings.comfort_layer_1_image -%}
                    <img 
                      src="{{ block.settings.comfort_layer_1_image | image_url: width: 150, height: 150, crop: 'center' }}" 
                      alt="Layer 1"
                      width="160"
                      height="60"
                      style="margin: 0 auto; display: block;"
                      loading="lazy"
                    >
                  {%- endif -%}
                  {%- if block.settings.comfort_layer_2_image -%}
                    <img 
                      src="{{ block.settings.comfort_layer_2_image | image_url: width: 150, height: 150, crop: 'center' }}" 
                      alt="Layer 2"
                      width="160"
                      height="60"
                      style="margin: 0 auto; display: block;"
                      loading="lazy"
                    >
                  {%- endif -%}
