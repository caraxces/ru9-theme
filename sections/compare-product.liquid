<style>
  /* Desktop Table Styles */
  .mattress-comparison-table {
    width: 100%;
    margin-top: 30px;
  }
  
  .mattress-comparison-table table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed; /* Critical for equal column widths */
    border: 1px solid #e0e0e0;
  }
  
  .mattress-comparison-table th,
  .mattress-comparison-table td {
    border: 1px solid #e0e0e0;
    padding: 15px;
    vertical-align: top;
    word-wrap: break-word;
  }
  
  /* Column Widths */
  .first-column {
    width: 15%;
    background-color: #f9f9f9;
    font-weight: bold;
    text-align: left;
  }
  
  .product-column {
    width: calc(85% / {{ section.blocks.size }}); /* Distribute remaining width evenly */
    text-align: left;
  }
  
  /* Header Row */
  .header-row th {
    background-color: #f9f9f9;
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
  }
  
  /* Image Row */
  .image-row td {
    text-align: center;
    vertical-align: middle;
    padding: 20px 15px;
  }
  
  .image-row img {
    max-width: 100%;
    height: auto;
    max-height: 150px;
    object-fit: contain;
  }
  
  /* Features Row */
  .features-row td {
    vertical-align: top;
    min-height: 150px; /* Ensure minimum height */
  }
  
  /* Comfort Row */
  .comfort-row td {
    text-align: center;
    vertical-align: middle;
  }
  
  /* Height Row */
  .height-row td {
    text-align: center;
    font-weight: bold;
  }
  
  /* Target Users Row */
  .target-users-row td {
    vertical-align: top;
  }
  
  /* Price Row */
  .price-row td {
    text-align: center;
    font-weight: bold;
  }
  
  /* Button Row */
  .button-row td {
    text-align: center;
    padding: 20px 15px;
  }
  
  .buy-button {
    display: inline-block;
    background-color: #000;
    color: white;
    padding: 8px 20px;
    text-transform: uppercase;
    font-weight: bold;
    text-decoration: none;
    border-radius: 0;
    transition: background-color 0.3s;
  }
  
  .buy-button:hover {
    background-color: #333;
    color: white;
  }
  
  /* Mobile Styles */
  .mattress-comparison-mobile {
    display: none;
    margin-top: 30px;
  }
  
  @media (max-width: 768px) {
    .mattress-comparison-mobile {
      display: block;
    }
  }
  
  .mobile-comparison-table {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
  }
  
  /* Hide scrollbar for Chrome, Safari and Opera */
  .mobile-comparison-table::-webkit-scrollbar {
    display: none;
  }
  
  .mobile-comparison-table table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
    border: 1px solid #e0e0e0;
  }
  
  .mobile-comparison-table th,
  .mobile-comparison-table td {
    border: 1px solid #e0e0e0;
    padding: 15px;
    vertical-align: top;
  }
  
  /* Mobile Column Styles */
  .mobile-comparison-table .first-column {
    width: 120px;
    min-width: 120px;
    background-color: #f9f9f9;
    font-weight: bold;
    text-align: left;
    position: sticky;
    left: 0;
    z-index: 2;
    box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  }
  
  .mobile-comparison-table .product-column {
    width: 200px;
    min-width: 200px;
    text-align: left;
  }
  
  /* Section Header Styles */
  .section-header {
    margin-bottom: 30px;
  }
  
  .section-header__title {
    font-size: 24px;
    margin-bottom: 10px;
    text-transform: uppercase;
    text-align: center;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Function to match row heights in mobile table
    function matchRowHeights() {
      if (window.innerWidth <= 768) {
        const rows = document.querySelectorAll('.mobile-comparison-table tr');
        
        rows.forEach(row => {
          // Reset heights first
          const cells = row.querySelectorAll('td, th');
          cells.forEach(cell => {
            cell.style.height = 'auto';
          });
          
          // Get the tallest cell
          let maxHeight = 0;
          cells.forEach(cell => {
            const height = cell.offsetHeight;
            if (height > maxHeight) {
              maxHeight = height;
            }
          });
          
          // Set all cells to the tallest height
          cells.forEach(cell => {
            cell.style.height = maxHeight + 'px';
          });
        });
      }
    }
    
    // Run on load and resize
    window.addEventListener('resize', matchRowHeights);
    window.addEventListener('load', matchRowHeights);
    
    // Run after a short delay to ensure all content is loaded
    setTimeout(matchRowHeights, 500);
  });
</script>

