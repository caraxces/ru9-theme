{% liquid
  if section.settings.section_width != 'page-width'
    if section.settings.section_width == 'full-width'
      assign page_width = '100%'
    endif
    if section.settings.section_width == 'customize_width'
      assign page_width = section.settings.customize_width | plus: 80 | append: 'px'
    endif
  endif
%}

<div
  class="compare-products section-padding section--divider"
  data-section-id="{{ section.id }}"
  data-section-type="compare-products"
  id="CompareProduct"
>
  <div
    class="page-width"
    style="{% if section.settings.section_width != 'page-width' %}--page-width: {{ page_width }}{% endif %}"
  >
    <div class="section-header text-center">
      <h2 class="section-header__title">{{ section.settings.title }}</h2>
      <div class="rte text-lg">{{ section.settings.description }}</div>
    </div>

    <!-- Desktop Comparison Table -->
    <div class="mattress-comparison-table desktop-table small--hide">
      <table>
        <!-- Header Row -->
        <tr class="header-row">
          <th class="first-column"></th>
          {%- for block in section.blocks -%}
            <th class="product-column">{{ block.settings.product_title }}</th>
          {%- endfor -%}
        </tr>
        
        <!-- Image Row -->
        <tr class="image-row">
          <td class="first-column"></td>
          {%- for block in section.blocks -%}
            <td class="product-column">
              {%- if block.settings.product_image -%}
                <img 
                  src="{{ block.settings.product_image | img_url: '300x300', crop: 'center' }}" 
                  alt="{{ block.settings.product_title }}"
                  width="150"
                  height="150"
                  style="margin: 0 auto; display: block;"
                  loading="lazy"
                >
              {%- endif -%}
            </td>
          {%- endfor -%}
        </tr>
        
        <!-- Features Row -->
        <tr class="features-row">
          <td class="first-column">Đặc tính sản phẩm</td>
          {%- for block in section.blocks -%}
            <td class="product-column">
              {{ block.settings.product_features | newline_to_br }}
            </td>
          {%- endfor -%}
        </tr>
        
        <!-- Comfort Row -->
        <tr class="comfort-row">
          <td class="first-column">Độ êm ái</td>
          {%- for block in section.blocks -%}
            <td class="product-column">
              {%- if block.settings.comfort_layer_1_image -%}
                <img 
                  src="{{ block.settings.comfort_layer_1_image | img_url: '150x150', crop: 'center' }}" 
                  alt="Layer 1"
                  width="80"
                  height="30"
                  style="margin: 0 auto; display: block;"
                  loading="lazy"
                >
              {%- endif -%}
              {%- if block.settings.comfort_layer_2_image -%}
                <img 
                  src="{{ block.settings.comfort_layer_2_image | img_url: '150x150', crop: 'center' }}" 
                  alt="Layer 2"
                  width="80"
                  height="30"
                  style="margin: 0 auto; display: block;"
                  loading="lazy"
                >
              {%- endif -%}
            </td>
          {%- endfor -%}
        </tr>
        
        <!-- Height Row -->
        <tr class="height-row">
          <td class="first-column">Độ cao sản phẩm</td>
          {%- for block in section.blocks -%}
            <td class="product-column">{{ block.settings.product_thickness }}</td>
          {%- endfor -%}
        </tr>
        
        <!-- Target Users Row -->
        <tr class="target-users-row">
          <td class="first-column">Đối tượng sử dụng</td>
          {%- for block in section.blocks -%}
            <td class="product-column">
              {{ block.settings.suitable_for | newline_to_br }}
            </td>
          {%- endfor -%}
        </tr>
        
        <!-- Price Row -->
        <tr class="price-row">
          <td class="first-column">Giá sản phẩm</td>
          {%- for block in section.blocks -%}
            <td class="product-column">{{ block.settings.product_price }}</td>
          {%- endfor -%}
        </tr>
        
        <!-- Buy Button Row -->
        <tr class="button-row">
          <td class="first-column"></td>
          {%- for block in section.blocks -%}
            <td class="product-column">
              <a href="{{ block.settings.product_url }}" class="buy-button">MUA NGAY</a>
            </td>
          {%- endfor -%}
        </tr>
      </table>
    </div>
    
