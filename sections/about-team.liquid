{%- render 'section_css' -%}

<!-- Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;700&display=swap" rel="stylesheet">

<style>
  :root {
    --blue-light: #759CE6;
    --blue-dark: #1C2C58;
  }

  .about-team-section {
    padding: 0;
    background-color: #ffffff;
  }

  /* ===== MOBILE FIRST (default) ===== */
  .about-team-section {
    padding: 40px 0;
    background-color: #ffffff;
  }

  .about-team-content {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-items: left;
  }

  .about-team-quote-left {
    order: 1;
    width: 100%;
    margin-bottom: 30px;
  }

  .about-team-image {
    order: 2;
    width: 100%;
    margin-bottom: 30px;
  }

  .about-team-text {
    order: 3;
    width: 100%;
  }

  /* Mobile: Title styles */
  .about-team-quote-left h2 {
    font-family: "Be Vietnam Pro", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
    font-style: normal;
    font-weight: 700;
    margin: 0;
    text-align: left;
    color: var(--blue-light);
    font-size: 20px;
    line-height: 140%;
    margin-bottom: 10px;
  }

  /* Mobile: Subtitle styles */
  .about-team-quote-left h3 {
    font-family: "Be Vietnam Pro", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
    font-style: normal;
    font-weight: 700;
    margin: 0;
    text-align: left;
    color: var(--blue-dark);
    font-size: 20px;
    line-height: 140%;
    margin-bottom: 20px;
  }

  .about-team-quote-left h3 span {
    display: inline;
  }

  /* Mobile: Quote styles */
  .about-team-quote-left .quote-text {
    font-family: "Be Vietnam Pro", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
    font-style: italic;
    font-weight: 600;
    font-size: 14px;
    line-height: 140%;
    color: var(--blue-dark);
    text-align: left;
    padding-bottom: 20px;
    width: 100%;
  }

  /* Mobile: Content styles */
  .ru9-textblock {
    font-family: "Be Vietnam Pro", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif !important;
    font-style: normal !important;
    font-weight: 400 !important;
    font-size: 14px !important;
    line-height: 140% !important;
    color: #000 !important;
    text-align: justify !important;
    width: 100% !important;
    margin: 0 !important;
  }

  .ru9-textblock p {
    margin: 0 0 20px 0 !important;
    font-family: inherit !important;
    font-weight: inherit !important;
    font-size: inherit !important;
    line-height: inherit !important;
    color: inherit !important;
    text-align: inherit !important;
  }

  /* Mobile: Image styles */
  .about-team-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(16,38,84,.06);
  }

  /* Mobile: Section padding */
  .about-team-section .page-width {
    padding: 0 15px;
  }

  /* ===== DESKTOP (768px+) ===== */
  @media (min-width: 768px) {
    .about-team-content {
      display: flex;
      flex-direction: row;
      gap: 20px;
      align-items: flex-end;
      margin-bottom: 40px;
    }

    .about-team-quote-left {
      flex: 0 0 568px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      padding-left: 5rem;
      height: 460px;
      order: unset;
    }

    .about-team-text {
      flex: 0 0 auto;
      width: 301px;
      min-width: 301px;
      order: unset;
    }

    /* Desktop: Title styles */
    .about-team-quote-left h2 {
      font-size: 60px;
      line-height: 80px;
      text-align: left;
      margin-bottom: 20px;
    }

    /* Desktop: Subtitle styles */
    .about-team-quote-left h3 {
      font-size: 60px;
      line-height: 80px;
      text-align: left;
      margin-bottom: 40px;
    }

    .about-team-quote-left h3 span {
      display: block;
    }

    /* Desktop: Quote styles */
    .about-team-quote-left .quote-text {
      font-size: 24px;
      font-weight: 600;
      color: #1C2C58;
      font-style: italic;
      line-height: 1.4;
      border-bottom: 1px solid #1C2C58;
      margin-top: auto;
      align-self: flex-end;
      text-align: left;
    }

    /* Desktop: Content styles */
    .ru9-textblock {
      font-size: 20px !important;
      line-height: 140% !important;
      text-align: justify !important;
      width: 100% !important;
      max-width: 301px !important;
      margin: 0 !important;
    }

    .ru9-textblock p {
      margin: 0 0 20px 0 !important;
    }

    /* Desktop: Image styles */
    .about-team-image img {
      width: auto;
      height: 440px;
      padding-right: 5rem;
      object-fit: cover;
      border-radius: 16px;
      box-shadow: 0 6px 18px rgba(16,38,84,.06);
    }

    /* Desktop: Section padding */
    .about-team-section .page-width {
      padding: 0;
      position: relative;
    }

    .about-team-image {
      position: absolute;
      right: 0;
      bottom: 0;
      width: auto;
      height: 440px;
      display: flex;
      align-items: center;
    }
  }
</style>

<div class="about-team-section">
  <div class="page-width">
    <div class="about-team-content">
      <div class="about-team-quote-left">
        <h2>{{ section.settings.title | default: 'Đội ngũ Ru9' }}</h2>
        <h3>
          <span>{{ section.settings.subtitle_line1 | default: 'Nơi giấc mơ' }}</span>
          <span>{{ section.settings.subtitle_line2 | default: 'được nuôi dưỡng' }}</span>
        </h3>
        <div class="quote-text">
          <p>{{ section.settings.quote | default: 'Tại Ru9, chúng tôi tin rằng mọi giấc mơ đều xứng đáng được nâng niu.' }}</p>
        </div>
      </div>
      <div class="about-team-text">
        <div class="ru9-textblock">
          <p>{{ section.settings.content_paragraph1 | default: 'Đó không chỉ là giấc mơ về một giấc ngủ ngon trọn vẹn cho các khách hàng, mà còn là hoài bão và khát vọng của mỗi thành viên trong đại gia đình Ru9.' }}</p>
          <p>{{ section.settings.content_paragraph2 | default: 'Văn hóa Ru9 được xây dựng dựa trên sự gắn kết và thấu hiểu. Trong khi đội ngũ văn phòng tập trung nghiên cứu, sáng tạo và hoàn thiện sản phẩm, đội ngũ showroom luôn mang đến những trải nghiệm gần gũi và chân thật nhất cho khách hàng.' }}</p>
        </div>
      </div>
      <div class="about-team-image">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | image_url: width: 600 }}" 
            alt="{{ section.settings.image.alt | escape }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            loading="lazy"
          >
        {% else %}
          <img src="https://via.placeholder.com/600x400/3D6DFF/FFFFFF?text=Ru9+Team" alt="Ru9 Team" width="600" height="400" />
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Team",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Đội ngũ Ru9"
    },
    {
      "type": "text",
      "id": "subtitle_line1",
      "label": "Subtitle Line 1",
      "default": "Nơi giấc mơ"
    },
    {
      "type": "text",
      "id": "subtitle_line2",
      "label": "Subtitle Line 2",
      "default": "được nuôi dưỡng"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Team Quote",
      "default": "Tại Ru9, chúng tôi tin rằng mọi giấc mơ đều xứng đáng được nâng niu."
    },
    {
      "type": "textarea",
      "id": "content_paragraph1",
      "label": "Content Paragraph 1",
      "default": "Đó không chỉ là giấc mơ về một giấc ngủ ngon trọn vẹn cho các khách hàng, mà còn là hoài bão và khát vọng của mỗi thành viên trong đại gia đình Ru9."
    },
    {
      "type": "textarea",
      "id": "content_paragraph2",
      "label": "Content Paragraph 2",
      "default": "Văn hóa Ru9 được xây dựng dựa trên sự gắn kết và thấu hiểu. Trong khi đội ngũ văn phòng tập trung nghiên cứu, sáng tạo và hoàn thiện sản phẩm, đội ngũ showroom luôn mang đến những trải nghiệm gần gũi và chân thật nhất cho khách hàng."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Team Image"
    }
  ],
  "presets": [
    {
      "name": "About Team"
    }
  ]
}
{% endschema %}