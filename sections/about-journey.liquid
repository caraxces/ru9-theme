{%- render 'section_css' -%}

<style>
  .about-journey-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-journey-section .page-width {
    padding: 0;
  }
  .about-journey-title {
    text-align: center;
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 20px;
  }
  .about-journey-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
  }
  .about-journey-intro p {
    margin-bottom: 16px;
  }
  .about-journey-intro p:last-child {
    margin-bottom: 0;
  }
  .about-journey-content {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }
  .about-journey-item h3 {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 20px;
    line-height: 1.2;
  }
  .about-journey-image {
    margin: 20px 0;
  }
  .about-journey-image img {
    width: 100%;
    border-radius: 16px;
    box-shadow: 0 6px 18px rgba(16,38,84,.06);
    height: 300px;
    object-fit: cover;
  }
  .about-journey-item p {
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
    margin-bottom: 16px;
  }
  .about-journey-item p:last-child {
    margin-bottom: 0;
  }
  .about-journey-awards h3 {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 30px;
    line-height: 1.2;
  }
  .about-journey-awards-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
  .about-journey-award-card {
    background-color: {{ section.settings.card_background_color | default: '#F5F5F5' }};
    padding: 30px 20px;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 6px 18px rgba(16,38,84,.06);
  }
  .about-journey-award-icon {
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
  }
  .about-journey-award-icon img {
    width: 80px;
    height: 80px;
    object-fit: contain;
  }
  .about-journey-award-card h4 {
    font-size: 18px;
    font-weight: 600;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 16px;
    line-height: 1.2;
  }
  .about-journey-award-card p {
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
    margin: 0;
  }
  .about-journey-media h3 {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 30px;
    line-height: 1.2;
  }
  .about-journey-media-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
    margin: 30px 0;
  }
  .about-journey-media-logos img {
    height: 60px;
    width: auto;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;
  }
  .about-journey-media-logos img:hover {
    filter: grayscale(0%);
    opacity: 1;
  }
  .about-journey-quote {
    text-align: center;
    font-size: 18px;
    font-style: italic;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    max-width: 900px;
    margin: 40px auto 0;
    line-height: 1.6;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-journey-section {
      padding: 0;
    }
    .about-journey-title {
      font-size: 24px;
    }
    .about-journey-intro {
      margin-bottom: 40px;
    }
    .about-journey-content {
      gap: 40px;
    }
    .about-journey-item h3 {
      font-size: 20px;
    }
    .about-journey-image img {
      height: 200px;
    }
    .about-journey-awards h3 {
      font-size: 20px;
    }
    .about-journey-awards-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .about-journey-award-card {
      padding: 20px 15px;
    }
    .about-journey-award-icon img {
      width: 60px;
      height: 60px;
    }
    .about-journey-award-card h4 {
      font-size: 16px;
    }
    .about-journey-media h3 {
      font-size: 20px;
    }
    .about-journey-media-logos {
      flex-direction: column;
      gap: 20px;
    }
    .about-journey-quote {
      font-size: 16px;
      margin-top: 30px;
    }
  }
</style>

<div class="about-journey-section">
  <div class="page-width">
    <div class="about-journey-title">{{ section.settings.title | default: '<h2>Từ giấc mơ ngủ ngon đến những vinh quang</h2>' }}</div>
    <div class="about-journey-intro">
      {{ section.settings.intro_content }}
    </div>
    
    <div class="about-journey-content">
      <div class="about-journey-item">
        <div>{{ section.settings.journey_title | default: '<h3>Từ giấc mơ ngủ ngon đến hiện thực</h3>' }}</div>
        {% if section.settings.journey_image != blank %}
          <div class="about-journey-image">
            <img 
              src="{{ section.settings.journey_image | image_url: width: 600 }}" 
              alt="{{ section.settings.journey_image.alt | escape }}"
              width="600"
              height="300"
              loading="lazy"
            >
          </div>
        {% endif %}
        {{ section.settings.journey_content }}
      </div>

      <div class="about-journey-awards">
        <div>{{ section.settings.awards_title | default: '<h3>Vinh danh những nỗ lực tiên phong</h3>' }}</div>
        <div class="about-journey-awards-grid">
          {% for block in section.blocks %}
            <div class="about-journey-award-card">
              <div class="about-journey-award-icon">
                {% if block.settings.icon != blank %}
                  <img 
                    src="{{ block.settings.icon | image_url: width: 80 }}" 
                    alt="{{ block.settings.icon.alt | escape }}"
                    width="80"
                    height="80"
                    loading="lazy"
                  >
                {% else %}
                  <img src="https://via.placeholder.com/80x80/3D6DFF/FFFFFF?text=Award+{{ forloop.index }}" alt="Award {{ forloop.index }}" width="80" height="80" />
                {% endif %}
              </div>
              <div>{{ block.settings.title }}</div>
              <div>{{ block.settings.description }}</div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="about-journey-media">
        <div>{{ section.settings.media_title | default: '<h3>Lan tỏa câu chuyện truyền cảm hứng</h3>' }}</div>
        <div class="about-journey-media-logos">
          {% if section.settings.media_logo_1 != blank %}
            <img src="{{ section.settings.media_logo_1 | image_url: width: 120 }}" alt="Media 1" width="120" height="60" loading="lazy" />
          {% endif %}
          {% if section.settings.media_logo_2 != blank %}
            <img src="{{ section.settings.media_logo_2 | image_url: width: 120 }}" alt="Media 2" width="120" height="60" loading="lazy" />
          {% endif %}
          {% if section.settings.media_logo_3 != blank %}
            <img src="{{ section.settings.media_logo_3 | image_url: width: 120 }}" alt="Media 3" width="120" height="60" loading="lazy" />
          {% endif %}
          {% if section.settings.media_logo_4 != blank %}
            <img src="{{ section.settings.media_logo_4 | image_url: width: 120 }}" alt="Media 4" width="120" height="60" loading="lazy" />
          {% endif %}
          {% if section.settings.media_logo_5 != blank %}
            <img src="{{ section.settings.media_logo_5 | image_url: width: 120 }}" alt="Media 5" width="120" height="60" loading="lazy" />
          {% endif %}
        </div>
        {{ section.settings.media_content }}
      </div>
    </div>

    <div class="about-journey-quote">{{ section.settings.quote | default: '<p>"Những thành tựu này là động lực mạnh mẽ để Ru9 tiếp tục kiên định với sứ mệnh mang giấc ngủ chất lượng đến mọi nhà, kiến tạo một tương lai tốt đẹp hơn cho thế hệ mai sau."</p>' }}</div>
  </div>
</div>

