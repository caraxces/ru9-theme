{%- render 'section_css' -%}

<style>
  .about-promise-section {
    padding: 80px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-promise-section .page-width {
    padding: 0 20px;
  }
  .about-promise-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }
  .about-promise-left {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .about-promise-title {
    text-align: left;
    margin: 0;
  }
  .about-promise-title-line1 {
    font-size: 1.5em;
    font-weight: 700;
    color: {{ section.settings.subtitle_color | default: '#759CE6' }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }
  .about-promise-title-line2 {
    font-size: 2.5em;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2B4D' }};
    margin: 0;
    line-height: 1.2;
  }
  .about-promise-description {
    color: {{ section.settings.text_color | default: '#333333' }};
    line-height: 1.6;
    margin: 0;
    font-size: 16px;
  }
  .about-promise-description p {
    margin-bottom: 16px;
  }
  .about-promise-description p:last-child {
    margin-bottom: 0;
  }
  .about-promise-right {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .about-promise-timeline {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    position: relative;
  }
  .about-promise-timeline-line {
    width: 100%;
    height: 3px;
    background-color: #E5E7EB;
    position: relative;
    margin-bottom: 20px;
  }
  .about-promise-timeline-dots {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: absolute;
    top: -8px;
  }
  .about-promise-timeline-dot {
    width: 16px;
    height: 16px;
    background-color: #D9D9D9;
    border-radius: 50%;
    position: relative;
  }
  .about-promise-timeline-labels {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-top: 10px;
  }
  .about-promise-timeline-label {
    font-size: 14px;
    font-weight: 500;
    color: {{ section.settings.text_color | default: '#333333' }};
    text-align: center;
    margin: 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-promise-section {
      padding: 60px 0;
    }
    .about-promise-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    .about-promise-left {
      gap: 20px;
    }
    .about-promise-title-line1 {
      font-size: 1.25em;
    }
    .about-promise-title-line2 {
      font-size: 2em;
    }
    .about-promise-description {
      font-size: 14px;
    }
    .about-promise-timeline-labels {
      flex-wrap: wrap;
      gap: 10px;
    }
    .about-promise-timeline-label {
      font-size: 12px;
      flex: 1;
      min-width: 60px;
    }
  }
</style>

<div class="about-promise-section">
  <div class="page-width">
    <div class="about-promise-content">
      <div class="about-promise-left">
        <div class="about-promise-title">
          <div class="about-promise-title-line1">{{ section.settings.title_line1 | default: 'Lời hứa cho mỗi' }}</div>
          <div class="about-promise-title-line2">{{ section.settings.title_line2 | default: 'giấc ngủ ngon' }}</div>
        </div>
        <div class="about-promise-description">
          {{ section.settings.description | default: '<p>Ru9 không chỉ bán một sản phẩm mà còn là hành trình xây dựng một cộng đồng nơi mọi người đều được tận hưởng trọn vẹn giá trị của giấc ngủ. Vì sự tin tưởng của bạn không chỉ đến từ chất lượng sản phẩm, mà còn từ sự an tâm tuyệt đối trong suốt quá trình trải nghiệm. Đó là lý do Ru9 mang đến Cam kết 5 sao uy tín:</p>' }}
        </div>
      </div>
      
      <div class="about-promise-right">
        <div class="about-promise-timeline">
          <div class="about-promise-timeline-line">
            <div class="about-promise-timeline-dots">
              {% for block in section.blocks %}
                <div class="about-promise-timeline-dot"></div>
              {% endfor %}
            </div>
          </div>
          <div class="about-promise-timeline-labels">
            {% for block in section.blocks %}
              <div class="about-promise-timeline-label">{{ block.settings.title }}</div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

