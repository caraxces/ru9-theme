{%- render 'section_css' -%}

<style>
  .about-promise-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#F5F5F5' }};
  }
  .about-promise-section .page-width {
    padding: 0;
  }
  .about-promise-title {
    text-align: center;
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 20px;
  }
  .about-promise-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 40px;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
  }
  .about-promise-intro p {
    margin-bottom: 16px;
  }
  .about-promise-intro p:last-child {
    margin-bottom: 0;
  }
  .about-promise-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 20px;
  }
  .about-promise-card {
    background-color: {{ section.settings.card_background_color | default: '#ffffff' }};
    padding: 30px 20px;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 6px 18px rgba(16,38,84,.06);
    transition: transform 0.3s ease;
  }
  .about-promise-card:hover {
    transform: translateY(-5px);
  }
  .about-promise-icon {
    font-size: 48px;
    margin-bottom: 16px;
    display: block;
  }
  .about-promise-card h3 {
    font-size: 16px;
    font-weight: 600;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin: 0;
    line-height: 1.2;
  }

  /* Mobile responsive */
  @media (max-width: 1024px) {
    .about-promise-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .about-promise-section {
      padding: 0;
    }
    .about-promise-title {
      font-size: 24px;
    }
    .about-promise-intro {
      margin-bottom: 30px;
    }
    .about-promise-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
    .about-promise-card {
      padding: 20px 15px;
    }
    .about-promise-icon {
      font-size: 36px;
      margin-bottom: 12px;
    }
    .about-promise-card h3 {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .about-promise-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="about-promise-section">
  <div class="page-width">
    <div class="about-promise-title">{{ section.settings.title | default: '<h2>Lời hứa cho mỗi giấc ngủ ngon</h2>' }}</div>
    <div class="about-promise-intro">
      {{ section.settings.intro_content }}
    </div>
    
    <div class="about-promise-grid">
      {% for block in section.blocks %}
        <div class="about-promise-card">
          <span class="about-promise-icon">{{ block.settings.icon | default: '⭐' }}</span>
          <div>{{ block.settings.title }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

