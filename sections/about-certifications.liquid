{%- render 'section_css' -%}

<style>
  .about-certifications-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#F5F5F5' }};
  }
  .about-certifications-section .page-width {
    padding: 0;
  }
  .about-certifications-title {
    text-align: center;
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 20px;
  }
  .about-certifications-subtitle {
    text-align: center;
    font-size: 18px;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    margin-bottom: 40px;
    font-style: italic;
  }
  .about-certifications-intro {
    text-align: center;
    max-width: 900px;
    margin: 0 auto 40px;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
  }
  .about-certifications-intro p {
    margin-bottom: 16px;
  }
  .about-certifications-intro p:last-child {
    margin-bottom: 0;
  }
  .about-certifications-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }
  .about-certifications-card {
    background-color: {{ section.settings.card_background_color | default: '#ffffff' }};
    padding: 40px 30px;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 6px 18px rgba(16,38,84,.06);
  }
  .about-certifications-logo {
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
  }
  .about-certifications-logo img {
    width: 100px;
    height: 100px;
    object-fit: contain;
  }
  .about-certifications-card h3 {
    font-size: 20px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 16px;
    line-height: 1.2;
  }
  .about-certifications-card p {
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
    margin: 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-certifications-section {
      padding: 0;
    }
    .about-certifications-title {
      font-size: 24px;
    }
    .about-certifications-subtitle {
      font-size: 16px;
    }
    .about-certifications-intro {
      margin-bottom: 30px;
    }
    .about-certifications-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .about-certifications-card {
      padding: 30px 20px;
    }
    .about-certifications-logo {
      margin-bottom: 20px;
    }
    .about-certifications-logo img {
      width: 80px;
      height: 80px;
    }
    .about-certifications-card h3 {
      font-size: 18px;
    }
  }
</style>

<div class="about-certifications-section">
  <div class="page-width">
    <div class="about-certifications-title">{{ section.settings.title | default: '<h2>Mang đến chất lượng ngủ vượt trội</h2>' }}</div>
    <div class="about-certifications-subtitle">{{ section.settings.subtitle | default: '<p>"Tiên phong chất lượng với hai chứng nhận khắt khe và uy tín toàn cầu"</p>' }}</div>
    
    <div class="about-certifications-intro">
      {{ section.settings.intro_content }}
    </div>
    
    <div class="about-certifications-grid">
      {% for block in section.blocks %}
        <div class="about-certifications-card">
          <div class="about-certifications-logo">
            {% if block.settings.logo != blank %}
              <img 
                src="{{ block.settings.logo | image_url: width: 100 }}" 
                alt="{{ block.settings.logo.alt | escape }}"
                width="100"
                height="100"
                loading="lazy"
              >
            {% else %}
              <img src="https://via.placeholder.com/100x100/3D6DFF/FFFFFF?text=Logo+{{ forloop.index }}" alt="Logo {{ forloop.index }}" width="100" height="100" />
            {% endif %}
          </div>
          <div>{{ block.settings.title }}</div>
          <div>{{ block.settings.description }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Certifications",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Section Title",
      "default": "<h2>Mang đến chất lượng ngủ vượt trội</h2>"
    },
    {
      "type": "html",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "<p>\"Tiên phong chất lượng với hai chứng nhận khắt khe và uy tín toàn cầu\"</p>"
    },
    {
      "type": "richtext",
      "id": "intro_content",
      "label": "Introduction Content",
      "default": "<p>Giấc ngủ của bạn xứng đáng được chăm chút an toàn đến từng chi tiết. Vì thế, Ru9 không ngừng nỗ lực để trở thành thương hiệu tiên phong tại Việt Nam đạt hai chứng nhận quốc tế uy tín, bảo đảm chất lượng không chỉ ở sản phẩm mà còn trong toàn bộ quy trình sản xuất.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F5F5F5"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#1A2230"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#5E6B85"
    }
  ],
  "blocks": [
    {
      "type": "about_certification_card",
      "name": "Certification Card",
      "settings": [
        {
          "type": "html",
          "id": "title",
          "label": "Certification Title",
          "default": "<h3>STANDARD 100 by OEKO-TEX®</h3>"
        },
        {
          "type": "html",
          "id": "description",
          "label": "Certification Description",
          "default": "<p>Chứng nhận độ an toàn của vải, đảm bảo chất liệu vượt qua các kiểm định nghiêm ngặt về chất độc hại, an toàn tuyệt đối cho sức khỏe bạn và thân thiện với môi trường.</p>"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Certification Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Certifications",
      "blocks": [
        {
          "type": "about_certification_card",
          "settings": {
            "title": "STANDARD 100 by OEKO-TEX®",
            "description": "Chứng nhận độ an toàn của vải, đảm bảo chất liệu vượt qua các kiểm định nghiêm ngặt về chất độc hại, an toàn tuyệt đối cho sức khỏe bạn và thân thiện với môi trường."
          }
        },
        {
          "type": "about_certification_card",
          "settings": {
            "title": "CertiPUR-US®",
            "description": "Chứng nhận này khẳng định foam trong nệm Ru9 đều đảm bảo an toàn, thân thiện với môi trường và đáp ứng 6 tiêu chuẩn khắt khe về thành phần, quy trình sản xuất và khí thải."
          }
        }
      ]
    }
  ]
}
{% endschema %}
