{%- render 'section_css' -%}

<style>
  .about-showroom-section {
    padding: 80px 0;
    background-color: {{ section.settings.background_color | default: '#F8FAFC' }};
  }
  .about-showroom-section .page-width {
    padding: 0 0px;
  }
  .about-showroom-content {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  .about-showroom-top {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 5rem;
    align-items: start;
  }
  .about-showroom-subtitle {
    font-size: 16px;
    color: {{ section.settings.subtitle_color | default: '#1A2B4D' }};
    margin: 0;
    font-weight: 600;
    line-height: 1.4;
  }
  .about-showroom-title-description {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .about-showroom-title {
    font-size: 2.5em;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2B4D' }};
    margin: 0;
    line-height: 1.2;
  }
  .about-showroom-description {
    color: {{ section.settings.text_color | default: '#333333' }};
    line-height: 1.6;
    margin: 0;
    font-size: 16px;
  }
  .about-showroom-description p {
    margin-bottom: 16px;
  }
  .about-showroom-description p:last-child {
    margin-bottom: 0;
  }
  .about-showroom-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  .about-showroom-card {
    background-color: {{ section.settings.card_background_color | default: '#F8FAFC' }};
    padding: 0;
    border-radius: 8px;
    box-shadow: none;
    transition: none;
  }
  .about-showroom-image {
    margin-bottom: 15px;
  }
  .about-showroom-image img {
    width: 100%;
    border-radius: 8px;
    height: 200px;
    object-fit: cover;
  }
  .about-showroom-card h3 {
    font-size: 16px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2B4D' }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }
  .about-showroom-card p {
    color: {{ section.settings.text_color | default: '#333333' }};
    margin: 0;
    line-height: 1.4;
    font-size: 14px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-showroom-section {
      padding: 5rem 0;
    }
    .about-showroom-section .page-width {
      padding: 0 15px;
    }
    .about-showroom-content {
      gap: 30px;
    }
    .about-showroom-top {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .about-showroom-title-description {
      gap: 15px;
    }
    .about-showroom-subtitle {
      font-size: 14px;
    }
    .about-showroom-title {
      font-size: 2em;
    }
    .about-showroom-description {
      font-size: 14px;
    }
    .about-showroom-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .about-showroom-image img {
      height: 150px;
    }
    .about-showroom-card h3 {
      font-size: 14px;
    }
    .about-showroom-card p {
      font-size: 12px;
    }
  }
</style>

<div class="about-showroom-section">
  <div class="page-width">
    <div class="about-showroom-content">
      <div class="about-showroom-top">
        <div class="about-showroom-subtitle">{{ section.settings.subtitle | default: 'Hệ Thống Showroom Ru9 với ba chỉ nhánh tiện lợi, luôn sẵn sàng đón tiếp bạn từ 09:00 - 21:00, Thứ 2 - Chủ nhật.' }}</div>
        <div class="about-showroom-title-description">
          <div class="about-showroom-title">{{ section.settings.title | default: 'Mời bạn đến trải nghiệm giấc ngủ 5 sao' }}</div>
          <div class="about-showroom-description">
            {{ section.settings.description | default: '<p>Để thực sự hiểu được giá trị của giấc ngủ chất lượng, bạn cần phải được chạm, cảm nhận và trải nghiệm trực tiếp. Showroom của Ru9 không chỉ là nơi trưng bày sản phẩm, mà là không gian riêng tư được thiết kế để bạn có thể tìm ra sản phẩm hoàn hảo cho bản thân và gia đình.</p>' }}
          </div>
        </div>
      </div>
      
      <div class="about-showroom-grid">
        {% for block in section.blocks %}
          <div class="about-showroom-card">
            <div class="about-showroom-image">
              {% if block.settings.image != blank %}
                <img 
                  src="{{ block.settings.image | image_url: width: 400 }}" 
                  alt="{{ block.settings.image.alt | escape }}"
                  width="400"
                  height="200"
                  loading="lazy"
                >
              {% else %}
                <img src="https://via.placeholder.com/400x200/3D6DFF/FFFFFF?text=Showroom+{{ forloop.index }}" alt="Showroom {{ forloop.index }}" width="400" height="200" />
              {% endif %}
            </div>
            <div>{{ block.settings.name }}</div>
            <div>{{ block.settings.address }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

