<div class="section-{{section.id}} press-hightlight">
    <div class="container container-small">
        {% if section.settings.heading != blank %}
        <div class="section-header under-line">
            <h2 class="h3 primary-color">{{ section.settings.heading }}</h2>
        </div>
        {% endif %}
        {% if section.blocks.size > 0 %}
          <div class="press-wrap">
          {% for block in section.blocks %}
            {%capture style%}
                style='
                {%if block.settings.background_image != blank%}
                background-image: url("{{block.settings.background_image | img_url: 'master'}}");
                {%endif%}
                {%if block.settings.background_color != blank%}
                background-color: {{block.settings.background_color}};
                {%endif%}
                '    
            {%endcapture%}
            {% capture thecycle %}{% cycle 'content-left', 'content-right' %}{% endcapture %}
            <div class="press-items {{thecycle}}" {{style}}>
              <div class="press-content">
                  
                  <div class="press-content__image">
                  {%if block.settings.image != blank%}
                    <img src="{{block.settings.image | img_url: 'master'}}" 
                         alt="{{block.settings.title}}"
                         width="{{block.settings.image.width}}"
                         height="{{block.settings.image.height}}"
                         >
                    {%else%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%endif%}
                  </div>
                  {%if block.settings.title != blank%}
                   <h3 class="press-content__title" {%if block.settings.text_color != blank%}style="color: {{block.settings.text_color}};"{%endif%}>
                   {%if block.settings.link != blank%}
                    <a href="{{block.settings.link}}">
                    {%endif%}
                    {{block.settings.title}}
                    {%if block.settings.link != blank%}
                    </a>
                    {%endif%}
                   </h3>
                  {%endif%}
                   {%if block.settings.sub_title != blank%}
                   <span class="press-content__sub-title" {%if block.settings.text_color != blank%}style="color: {{block.settings.text_color}};"{%endif%}>{{block.settings.sub_title}}</span>
                  {%endif%}
                  </div>
            </div>
          {%endfor%}
          </div>
        {%endif%}
    </div>
</div>
<style>

</style>
{% schema %}
{
  "name": "Gallery",
  "class": "index-section index-section--flush",
  "max_blocks": 9,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Chia sẻ khoảnh khắc ngủ ngon với #Ru9"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "header",
          "content": "Block content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "text",
          "id": "sub_title",
          "label": "Date"
        },
        {
          "type": "header",
          "content": "Block Style"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Title Color"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PF Custom",
      "category": "PageFly",
      
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
