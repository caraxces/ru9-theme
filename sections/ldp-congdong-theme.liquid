		{
		 "type": "color",
      	"id": "menu_background",
		"label": "Menu Background"
		},
	
		{
		 "type": "color",
      	"id": "footer_color",
		"label": "Footer Color"
		},
		{
		 "type": "color",
      	"id": "footer_background",
		"label": "Footer Background"
		}


	]
  }
