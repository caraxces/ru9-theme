    "name": "PF Reviews Slide",
    "max_blocks": 15,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "View All"
      },
      {
        "type": "text",
        "id": "link_title",
        "label": "Link Title",
