{%- comment -%} Include Design System CSS {%- endcomment -%}
{% render 'about-design-system' %}

<style>
.about-media {
  background: #F5F9FF;
  padding: var(--space-4xl) 0;
}

.about-media__container {
  max-width: 1594px;
  margin: 0 auto;
  padding: 0;
}

/* Top row: 3 images */
.about-media__top-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
  margin-bottom: 40px;
}

.about-media__top-item {
  width: 100%;
  margin: 0;
  padding: 0;
}

.about-media__top-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  margin: 0;
  padding: 0;
}

/* Bottom row: 5 videos */
.about-media__bottom-row {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 40px;
}

.about-media__bottom-item {
  width: 100%;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

.about-media__bottom-item video,
.about-media__bottom-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  margin: 0;
  padding: 0;
}

/* Mobile Carousel Styles */
@media (max-width: 749px) {
  .about-media {
    background: #F0F7FF;
    padding: 20px 0;
  }
  
  .about-media__container {
    padding: 0 15px;
  }
  
  /* Top row carousel */
  .about-media__top-row {
    display: flex;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    gap: 14px;
    margin-bottom: 16px;
    padding-bottom: 20px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }
  
  .about-media__top-row::-webkit-scrollbar {
    display: none;
  }
  
  .about-media__top-item {
    flex: 0 0 182px;
    width: 182px;
    height: 123px;
    scroll-snap-align: start;
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 10px 10px 20px 0px rgba(192, 204, 235, 0.3);
  }
  
  .about-media__top-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Bottom row carousel */
  .about-media__bottom-row {
    display: flex;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    gap: 15px;
    padding-bottom: 20px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }
  
  .about-media__bottom-row::-webkit-scrollbar {
    display: none;
  }
  
  .about-media__bottom-item {
    flex: 0 0 103.265px;
    width: 103.265px;
    height: 184px;
    scroll-snap-align: start;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0);
  }
  
  .about-media__bottom-item video,
  .about-media__bottom-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

@media (min-width: 750px) and (max-width: 1199px) {
  .about-media__container {
    padding: 0;
  }
  
  .about-media__top-row {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--gutter-desktop);
  }
  
  .about-media__top-row .about-media__top-item:last-child {
    grid-column: 1 / -1;
  }
  
  .about-media__bottom-row {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--gutter-desktop);
  }
  
  .about-media__bottom-row .about-media__bottom-item:nth-child(4),
  .about-media__bottom-row .about-media__bottom-item:nth-child(5) {
    grid-column: span 1;
  }
}

@media (min-width: 1200px) and (max-width: 1399px) {
  .about-media__bottom-row {
    grid-template-columns: repeat(4, 1fr);
    gap: var(--gutter-desktop);
  }
  
  .about-media__bottom-row .about-media__bottom-item:last-child {
    grid-column: span 1;
  }
}
</style>

<section class="about-section about-media">
  <div class="about-media__container">
    {%- comment -%} Top row: 3 images {%- endcomment -%}
    <div class="about-media__top-row">
      {%- for block in section.blocks -%}
        {%- if block.type == 'top_image' -%}
          <div class="about-media__top-item" {{ block.shopify_attributes }}>
            {%- if block.settings.image -%}
              <img 
                src="{{ block.settings.image | img_url: '1010x684' }}" 
                alt="{{ block.settings.image.alt | default: 'Media image' }}"
                loading="lazy"
              >
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    {%- comment -%} Bottom row: 5 videos {%- endcomment -%}
    <div class="about-media__bottom-row">
      {%- for block in section.blocks -%}
        {%- if block.type == 'bottom_video' -%}
          <div class="about-media__bottom-item" {{ block.shopify_attributes }}>
            {%- if block.settings.video != blank -%}
              {{ block.settings.video | video_tag: 
                autoplay: true, 
                loop: true, 
                controls: false, 
                muted: true,
                image_size: '550x980',
                class: 'about-media__bottom-video'
              }}
            {%- elsif block.settings.image -%}
              <img 
                src="{{ block.settings.image | img_url: '550x980' }}" 
                alt="{{ block.settings.image.alt | default: 'Media video' }}"
                loading="lazy"
              >
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

