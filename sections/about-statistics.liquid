{%- render 'section_css' -%}

<style>
  .about-statistics-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-statistics-section .page-width {
    padding: 0;
  }
  .about-statistics-title {
    text-align: center;
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 40px;
  }
  .about-statistics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 40px;
  }
  .about-statistics-card {
    text-align: center;
    padding: 30px 20px;
    background-color: {{ section.settings.card_background_color | default: '#F5F5F5' }};
    border-radius: 16px;
    box-shadow: 0 6px 18px rgba(16,38,84,.06);
  }
  .about-statistics-number {
    font-size: 48px;
    font-weight: 700;
    color: {{ section.settings.accent_color | default: '#4A90E2' }};
    margin-bottom: 12px;
    line-height: 1;
  }
  .about-statistics-label {
    color: {{ section.settings.text_color | default: '#1A2230' }};
    font-weight: 600;
    font-size: 16px;
    line-height: 1.2;
  }
  .about-statistics-description {
    text-align: center;
    font-size: 18px;
    font-style: italic;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 30px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .about-statistics-message {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
  }
  .about-statistics-message p {
    margin-bottom: 16px;
  }
  .about-statistics-message p:last-child {
    margin-bottom: 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-statistics-section {
      padding: 0;
    }
    .about-statistics-title {
      font-size: 24px;
      margin-bottom: 30px;
    }
    .about-statistics-grid {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 30px;
    }
    .about-statistics-card {
      padding: 20px 15px;
    }
    .about-statistics-number {
      font-size: 36px;
    }
    .about-statistics-description {
      font-size: 16px;
      margin-bottom: 20px;
    }
    .about-statistics-message {
      font-size: 14px;
    }
  }
</style>

<div class="about-statistics-section">
  <div class="page-width">
    <div class="about-statistics-title">{{ section.settings.title | default: '<h2>Qua những câu chuyện thực tế</h2>' }}</div>
    
    <div class="about-statistics-grid">
      {% for block in section.blocks %}
        <div class="about-statistics-card">
          <div class="about-statistics-number">{{ block.settings.number }}</div>
          <div class="about-statistics-label">{{ block.settings.label }}</div>
        </div>
      {% endfor %}
    </div>

    <p class="about-statistics-description">{{ section.settings.description | default: '"95% hài lòng sau 100 đêm thử, đánh giá trung bình 4.8/5, 10 năm cam kết bảo hành cùng 3 showroom tại Hà Nội và TP.HCM."' }}</p>
    
    <div class="about-statistics-message">
      {{ section.settings.message }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Statistics",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Section Title",
      "default": "<h2>Qua những câu chuyện thực tế</h2>"
    },
    {
      "type": "html",
      "id": "description",
      "label": "Statistics Description",
      "default": "<p>\"95% hài lòng sau 100 đêm thử, đánh giá trung bình 4.8/5, 10 năm cam kết bảo hành cùng 3 showroom tại Hà Nội và TP.HCM.\"</p>"
    },
    {
      "type": "richtext",
      "id": "message",
      "label": "Statistics Message",
      "default": "<p>Ru9 không thể lan tỏa giá trị của giấc ngủ chất lượng đến hàng triệu người Việt như hôm nay nếu không có sự tin tưởng và đồng hành của khách hàng trong suốt chặng đường ấy. Chính mỗi giấc ngủ ngon của bạn là nguồn cảm hứng để Ru9 tiếp tục hoàn thiện và lớn lên từng ngày.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card Background Color",
      "default": "#F5F5F5"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#1A2230"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Number Color",
      "default": "#4A90E2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#5E6B85"
    }
  ],
  "blocks": [
    {
      "type": "about_statistic_card",
      "name": "Statistic Card",
      "settings": [
        {
          "type": "html",
          "id": "number",
          "label": "Statistic Number",
          "default": "<span class=\"stat-number\">34</span>"
        },
        {
          "type": "html",
          "id": "label",
          "label": "Statistic Label",
          "default": "<span class=\"stat-label\">Tỉnh thành</span>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Statistics",
      "blocks": [
        {
          "type": "about_statistic_card",
          "settings": {
            "number": "34",
            "label": "Tỉnh thành"
          }
        },
        {
          "type": "about_statistic_card",
          "settings": {
            "number": "35,000+",
            "label": "Giấc ngủ ngon được giao đến tận nhà"
          }
        },
        {
          "type": "about_statistic_card",
          "settings": {
            "number": "50,000+",
            "label": "Khách hàng tin tưởng Ru9"
          }
        }
      ]
    }
  ]
}
{% endschema %}
