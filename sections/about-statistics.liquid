{%- render 'section_css' -%}

<style>
  .about-statistics-section {
    padding: 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  .about-statistics-section .page-width {
    padding: 0;
  }
  .about-statistics-title {
    text-align: left;
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 20px;
  }
  .about-statistics-carousel {
    text-align: center;
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 30px;
    line-height: 1.4;
  }
  .about-statistics-description {
    text-align: center;
    font-size: 18px;
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    margin-bottom: 30px;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }
  .about-statistics-stats {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin: 30px 0;
  }
  .about-statistics-stat-item {
    text-align: center;
    color: white;
    flex: 1;
    min-width: 200px;
  }
  .about-statistics-stat-number {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 8px;
    line-height: 1;
  }
  .about-statistics-stat-text {
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
  }
  .about-statistics-separator {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 40px;
  }
  .about-statistics-separator-line {
    flex: 1;
    height: 1px;
    background: #E5E7EB;
  }
  .about-statistics-separator-dots {
    display: flex;
    gap: 8px;
    margin: 0 20px;
  }
  .about-statistics-separator-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #D9D9D9;
  }
  .about-statistics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }
  .about-statistics-card {
    text-align: left;
  }
  .about-statistics-card h3 {
    font-size: 20px;
    font-weight: 700;
    color: {{ section.settings.title_color | default: '#1A2230' }};
    margin-bottom: 16px;
    line-height: 1.2;
  }
  .about-statistics-card p {
    color: {{ section.settings.text_color | default: '#5E6B85' }};
    line-height: 1.6;
    margin-bottom: 20px;
  }
  .about-statistics-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .about-statistics-section {
      padding: 0;
    }
    .about-statistics-title {
      font-size: 24px;
      margin-bottom: 30px;
    }
    .about-statistics-number {
      font-size: 36px;
    }
    .about-statistics-description {
      font-size: 16px;
      margin-bottom: 20px;
    }
    .about-statistics-message {
      font-size: 14px;
    }
    .about-statistics-grid {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 30px;
    }
    .about-statistics-card {
      padding: 20px 15px;
    }
    .about-statistics-stats {
      flex-direction: column;
      gap: 20px;
      padding: 30px 15px !important;
    }
    .about-statistics-stat-item {
      min-width: auto;
    }
    .about-statistics-stat-number {
      font-size: 36px;
    }
    .about-statistics-stat-text {
      font-size: 14px;
    }
  }
</style>

<div class="about-statistics-section">
  <div class="page-width">
    <div class="about-statistics-title">{{ section.settings.title | default: '<h2>Qua những câu chuyện thực tế</h2>' }}</div>
    
    <div class="about-statistics-carousel">{{ section.settings.carousel_text | default: '95% hài lòng sau 100 đêm thử, đánh giá trung bình 4.8/5, 10 năm cam kết bảo hành cùng 3 showroom tại Hà Nội và TP.HCM.' }}</div>
    
    <div class="about-statistics-description">{{ section.settings.description | default: '<p>Ru9 không thể lan tỏa giá trị của giấc ngủ chất lượng đến hàng triệu người Việt như hôm nay nếu không có sự tin tưởng và đồng hành của khách hàng trong suốt chặng đường ấy. Chính mỗi giấc ngủ ngon của bạn là nguồn cảm hứng để Ru9 tiếp tục hoàn thiện và lớn lên từng ngày.</p>' }}</div>
    
    {% for block in section.blocks %}
      {% if block.type == 'statistic_block' %}
        <div class="about-statistics-stats" style="
          background-color: {{ block.settings.background_color | default: '#759CE6' }};
          padding: {{ block.settings.padding | default: '40px 20px' }};
          border-radius: {{ block.settings.border_radius | default: '12px' }};
        ">
          <div class="about-statistics-stat-item" style="flex: {{ block.settings.stat1_size | default: '1' }};">
            <div class="about-statistics-stat-number" style="font-size: {{ block.settings.stat1_number_size | default: '48px' }};">
              {{ block.settings.stat1_number }}
            </div>
            <div class="about-statistics-stat-text" style="font-size: {{ block.settings.stat1_text_size | default: '16px' }};">
              {{ block.settings.stat1_text }}
            </div>
          </div>
          <div class="about-statistics-stat-item" style="flex: {{ block.settings.stat2_size | default: '1' }};">
            <div class="about-statistics-stat-number" style="font-size: {{ block.settings.stat2_number_size | default: '48px' }};">
              {{ block.settings.stat2_number }}
            </div>
            <div class="about-statistics-stat-text" style="font-size: {{ block.settings.stat2_text_size | default: '16px' }};">
              {{ block.settings.stat2_text }}
            </div>
          </div>
          <div class="about-statistics-stat-item" style="flex: {{ block.settings.stat3_size | default: '1' }};">
            <div class="about-statistics-stat-number" style="font-size: {{ block.settings.stat3_number_size | default: '48px' }};">
              {{ block.settings.stat3_number }}
            </div>
            <div class="about-statistics-stat-text" style="font-size: {{ block.settings.stat3_text_size | default: '16px' }};">
              {{ block.settings.stat3_text }}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
    
    <div class="about-statistics-separator">
      <div class="about-statistics-separator-line"></div>
      <div class="about-statistics-separator-dots">
        <div class="about-statistics-separator-dot"></div>
        <div class="about-statistics-separator-dot"></div>
        <div class="about-statistics-separator-dot"></div>
      </div>
      <div class="about-statistics-separator-line"></div>
    </div>
    
    <div class="about-statistics-grid">
      {% for block in section.blocks %}
        {% if block.type == 'about_statistic_card' %}
          <div class="about-statistics-card">
            <div>{{ block.settings.title }}</div>
            <div>{{ block.settings.description }}</div>
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 400 }}" 
                alt="{{ block.settings.image.alt | escape }}"
                width="400"
                height="200"
                loading="lazy"
              >
            {% else %}
              <img src="https://via.placeholder.com/400x200/3D6DFF/FFFFFF?text=Image+{{ forloop.index }}" alt="Image {{ forloop.index }}" width="400" height="200" />
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

