{% comment %}
  Section: Image Marquee
  - Displays a horizontally scrolling marquee of images.
{% endcomment %}

{%- if section.settings.quote_text != blank -%}
  <div class="page-width">
    <div class="image-marquee-quote">
      {{ section.settings.quote_text }}
    </div>
  </div>
{%- endif -%}

<div class="marquee-section-wrapper" style="background: #FFFBE9; overflow: hidden; width: 100vw; position: relative; left: 50%; right: 50%; margin-left: -50vw; margin-right: -50vw;">
  <div class="marquee-section" data-section-id="{{ section.id }}">
    <div class="marquee-content-{{ section.id }}" style="display: inline-flex; align-items: center; white-space: nowrap;">
      {%- if section.blocks.size > 0 -%}
        {%- for i in (1..2) -%}
          {%- for block in section.blocks -%}
            <div class="marquee-item" {{ block.shopify_attributes }} style="padding: 0 5rem; flex-shrink: 0;">
              {%- if block.settings.url != blank -%}<a href="{{ block.settings.url }}" style="display: block;">{%- endif -%}
              {%- if block.settings.image != blank -%}
                {%- assign image_height = 122 -%}
                {%- assign image_width = image_height | times: block.settings.image.aspect_ratio | round -%}
                <img
                  src="{{ block.settings.image | img_url: 'x122' }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  width=100%
                  height="5rem"
                  style="height: 5rem; width: 100%; display: block;"
                  loading="lazy"
                >
              {%- else -%}
                <div style="width: 150px;">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {%- endif -%}
              {%- if block.settings.url != blank -%}</a>{%- endif -%}
            </div>
          {%- endfor -%}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .image-marquee-quote {
    color: #000;
    text-align: center;
    font-family: "Be Vietnam Pro", sans-serif;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 30px;
    letter-spacing: 0.6px;
    max-width: 1274px;
    margin: 0 auto 50px;
  }

  .image-marquee-quote p {
    text-align: justify;
    margin: 0;
  }

  .marquee-section {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 80px;
    padding: 39px 0;
  }

  .marquee-content-{{ section.id }} {
    animation: marquee-{{ section.id }} {{ section.settings.speed }}s linear infinite;
  }

  .marquee-section:hover .marquee-content-{{ section.id }} {
    animation-play-state: paused;
  }

  @keyframes marquee-{{ section.id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .image-marquee-quote {
      font-size: 14px;
      line-height: 30px; /* 214.286% */
      letter-spacing: 0.6px;
      width: auto;
      max-width: 100%;
      padding: 0 9px;
    }

    .marquee-section {
      height: 5rem;
      width: 100%;
      justify-content: center;
      padding: 0;
    }

    .marquee-item img {
      height: 40px !important;
      width: auto !important;
    }

    .marquee-item {
      padding: 0 20px !important;
    }
  }
</style>

{% schema %}
{
  "name": "Image Marquee",
  "class": "index-section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "s",
      "label": "Animation Speed",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Marquee",
      "category": "Image",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
